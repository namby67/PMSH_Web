         $("#btnOkAuto").on("click", function () {

            let isActive  = $("#isActivenew").is(":checked") ? 1 : 0;
            let telephoneNew = $("#telephonenew").val().trim();
             let handphoneNew = $("#handphonenew").val().trim();

            // Lấy giá trị các input
