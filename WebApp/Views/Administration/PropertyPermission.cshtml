        $(".menu-group-title").on("click", function (event) {
             const submenu = $(this).next(".menu-left"); // lấy thằng menu-left con
        const icon = $(this).find("i");

        // toggle submenu
        submenu.slideToggle(200);

        // đổi icon
        icon.toggleClass("fa-chevron-down fa-chevron-up");
        });
