<style>
    .confirm-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .confirm-box {
        background: white;
        padding: 30px;
        border-radius: 12px;
        width: 400px;
        max-width: 90%;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        animation: fadeIn 0.3s ease;
        text-align: center;
    }

        .confirm-box h2 {
            margin: 0 0 10px;
            font-size: 20px;
            color: #333;
        }

        .confirm-box p {
            font-size: 16px;
            color: #666;
            margin: 10px 0 25px;
        }

    .confirm-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
        transition: 0.3s ease;
    }

    .btn-confirm {
        background-color: #28a745;
