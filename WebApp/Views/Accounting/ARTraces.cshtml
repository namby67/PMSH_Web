        console.log("Raw BusinessDate:", businessDateStr);

        // Tách phần ngày
        var parts = businessDateStr.split(' ');
        var dateParts = parts[0].split('/'); // ['8','29','2024']

        // Lấy giờ hiện tại
        var now = new Date();
        var currentHour = now.getHours();
        var currentMinute = now.getMinutes();

        // Tạo đối tượng Date mới với NGÀY từ businessDateStr và GIỜ hiện tại
        var parsedBusinessDate = new Date(dateParts[2], dateParts[0] - 1, dateParts[1], currentHour, currentMinute);

        // Hàm format theo chuẩn datetime-local: "YYYY-MM-DDTHH:mm"
        function formatDateTimeLocal(date) {
            const pad = (num) => num.toString().padStart(2, '0');
            return (
                date.getFullYear() +
                '-' + pad(date.getMonth() + 1) +
                '-' + pad(date.getDate()) +
                'T' + pad(date.getHours()) +
                ':' + pad(date.getMinutes())
            );
        }

        // Gán vào input
        $('#tracetime').val(formatDateTimeLocal(parsedBusinessDate));

        console.log("Formatted:", formatDateTimeLocal(parsedBusinessDate));
    });


     
