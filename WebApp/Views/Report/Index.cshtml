@{
    ViewBag.Title = "Report Index";
}

<!-- Các điều kiện chọn report -->
<select id="reportSelector">
    <option value="">-- Select Report --</option>
    <option value="DailyBreakfastDetail">Daily Breakfast Detail</option>
</select>

<!-- Vùng để render partial view -->
<div id="reportContainer"></div>

@section Scripts {
    <script>
        $("#reportSelector").change(function () {
            const selectedReport = $(this).val();
            if (selectedReport === "DailyBreakfastDetail") {
                // Gọi partial view render động
                $("#reportContainer").load("/Report/RenderDailyBreakfastDetail");
            }
        });
    </script>
}
