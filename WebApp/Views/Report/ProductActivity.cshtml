         document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        const today = new Date();

        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
        // Lấy ngày cuối cùng của tháng
        const lastDayOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);

        // Định dạng theo local time
        const formattedFirstDay = formatDate(firstDayOfMonth);
        const formattedLastDay = formatDate(lastDayOfMonth);

        console.log(formattedFirstDay); // Kiểm tra giá trị đúng chưa
        console.log(formattedLastDay); // Kiểm tra giá trị đúng chưa
        // Gán giá trị cho input date
        document.getElementById('fromDate').value = formattedFirstDay;
        document.getElementById('toDate').value = formattedLastDay;



    });

    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
               const sortFieldIndex = parseInt($("#sortOrder").val());
            const isDescending = $("#descending").is(":checked");
            const isAscending = $("#ascending").is(":checked");
        const sortDirection = isDescending ? "desc" : (isAscending ? "asc" : null);

             const masterllio = $("#masterllio").is(":checked");

    var statusValues = $("input[name='includeOptions']:checked")
        .map(function () {
            const val = $(this).val();         // ví dụ: "1,101"
            const parts = val.split(',');      // ["1", "101"]

            if (masterllio) {
                // Lấy phần có 3 chữ số
                return parts.find(p => p.length === 3);
            } else {
                // Lấy phần có 1 chữ số
                return parts.find(p => p.length === 1);
            }
        })
        .get()
        .join(',');

        
        $("#loadingSpinner").show();
        $.ajax({
            url: '/Report/ProductActivityData',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                toDate: $("#toDate").val(),
                   type: statusValues,
                   currency: $("#viewBy").val(),
            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
            success: function (result) {
                // $("#reportViewerContainer").html(result);
                // $("#loadingSpinner").hide();

                const sortFields = [
        "guestName",          // 0
        "totalTurnover",      // 1
        "roomSales",          // 2
        "fbTurnover",         // 3
        "eventTurnover",      // 4
        "micelliousTurnover", // 5
        "roomNight",          // 6
        "bedNightAll"         // 7
    ];

    const sortField = sortFields[sortFieldIndex];

    // ✅ Lọc Room Night >= input
    const roomNightFilter = parseInt($("#roomNight").val());
    if (!isNaN(roomNightFilter)) {
        result = result.filter(item => {
            const rn = parseInt(item.roomNight);
            return !isNaN(rn) && rn >= roomNightFilter;
        });
    }

    // ✅ Sắp xếp nếu có
    if (sortField && sortDirection) {
        result.sort(function (a, b) {
            let valA = a[sortField];
            let valB = b[sortField];

            if (!isNaN(valA)) valA = parseFloat(valA);
            if (!isNaN(valB)) valB = parseFloat(valB);

            if (typeof valA === "string" && typeof valB === "string") {
                return sortDirection === "asc"
                    ? valA.localeCompare(valB)
                    : valB.localeCompare(valA);
            }

            return sortDirection === "asc"
                ? (valA ?? 0) - (valB ?? 0)
                : (valB ?? 0) - (valA ?? 0);
        });
    }

                   
       initializProductActivityGrid(result);
                    $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });

