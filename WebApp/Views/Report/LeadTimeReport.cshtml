     function preparLeadtimeReportsData(data) {
        const groupedData = {};

        // Nhóm theo MarketType
        data.forEach(item => {
            const key = item.MarketType;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];
        const typeDate = $(".include-option:checked").val(); // Lấy lại typeDate

        // Danh sách các trường cần tính tổng theo typeDate
        const fromDateStr = $("#fromDate").val();
        const fromDateObj = new Date(fromDateStr);
        const numericFields = [];

        if (typeDate === "1") {
            const startDay = parseInt(fromDateStr.split("-")[2]);
            for (let i = startDay; i <= 31; i++) {
                numericFields.push(i.toString());
            }
            for (let i = 1; i < startDay; i++) {
                numericFields.push(i.toString());
            }
        } else if (typeDate === "0") {
            const startMonth = fromDateObj.getMonth() + 1;
            for (let i = startMonth; i <= 12; i++) {
                numericFields.push(i.toString());
            }
            for (let i = 1; i < startMonth; i++) {
                numericFields.push(i.toString());
            }
        }

        // 👉 Sắp xếp MarketType theo thứ tự alphabet
        const sortedGroupKeys = Object.keys(groupedData).sort((a, b) => {
            return a.localeCompare(b, 'vi', { sensitivity: 'base' }); // hỗ trợ tiếng Việt
        });

        // Tổng hợp từng nhóm đã sắp xếp
        sortedGroupKeys.forEach(MarketType => {
            const records = groupedData[MarketType];
                  const titleRow = {
                      MarketCode: `${MarketType}`,
                      isTitle: true,
                      cssClass: "custom",
                  };
           finalData.push(titleRow);
            finalData.push(...records);

            const totalRow = {
                MarketCode: "TOTAL",
                MarketName: "",
                MarketType: MarketType,
                isTotal: true,
                     cssClass: "custom"
            };

            numericFields.forEach(field => {
                totalRow[field] = records.reduce((sum, item) => {
                    const val = parseFloat(item[field]);
                    return sum + (isNaN(val) ? 0 : val);
                }, 0);
            });

            finalData.push(totalRow);
        });

        return finalData;
    }


     function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }


        function initializeLeadtimeReportsGrid(data) {
        const columnWidth = 180;

        const columns = [
            { dataField: "MarketCode", caption: "Code", width: columnWidth - 70 },
            { dataField: "MarketName", caption: "Name", width: columnWidth }
        ];

        const fromDateStr = $("#fromDate").val(); // yyyy-MM-dd
        const fromDateObj = new Date(fromDateStr);
        const typeDate = $(".include-option:checked").val();

        const fieldOrder = [];

        if (typeDate === "1") {
            const startDay = parseInt(fromDateStr.split("-")[2]);
            for (let i = startDay; i <= 31; i++) {
                fieldOrder.push(i.toString());
            }
            for (let i = 1; i < startDay; i++) {
                fieldOrder.push(i.toString());
            }
        } else if (typeDate === "0") {
            const startMonth = fromDateObj.getMonth() + 1;
            for (let i = startMonth; i <= 12; i++) {
                fieldOrder.push(i.toString());
            }
            for (let i = 1; i < startMonth; i++) {
                fieldOrder.push(i.toString());
            }
        }

        const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
            "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];

        for (let i of fieldOrder) {
            const fieldName = `${i}`;
            const hasData = data.some(item => item[fieldName] != null && item[fieldName] !== "");

            if (hasData) {
                let displayName = fieldName;
                if (typeDate === "0") {
                    const monthIndex = parseInt(fieldName) - 1;
                    if (monthIndex >= 0 && monthIndex < 12) {
                        displayName = monthNames[monthIndex];
                    }
                } else if (fieldName.length === 3) {
                    displayName = fieldName.substring(0, 2);
                }

                columns.push({
                    dataField: fieldName,
                    caption: displayName,
                    width: columnWidth - 100,
                    dataType: "number",
                    format: "#,##0"
                });
            }
        }

        const existingFields = new Set(columns.map(c => c.dataField));

        const underscoreFields = new Set();
        data.forEach(item => {
            Object.keys(item).forEach(key => {
                if (/^\d+_$/.test(key) && !existingFields.has(key)) {
                    underscoreFields.add(key);
                }
            });
        });

        for (let fieldName of underscoreFields) {
            const hasData = data.some(item => item[fieldName] != null && item[fieldName] !== "");

            if (hasData) {
                let displayName = fieldName.replace("_", "");
                if (displayName.length === 3) {
                    displayName = displayName.substring(0, 2);
                }

                columns.push({
                    dataField: fieldName,
                    caption: displayName,
                    width: columnWidth - 100,
                    dataType: "number",
                    format: "#,##0"
                });
            }
        }

        $("#gridContainer").dxDataGrid({
    dataSource: data,        height: 500, allowColumnResizing: true,
            columns: columns,
            paging: { pageSize: 25 },
            scrolling: {
                
                useNative: true,
                showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            headerFilter: {
                visible: true
            },
            selection: {
                mode: "multiple",
                showCheckBoxesMode: "none"
            },
            showBorders: true,
                onRowPrepared: function (e) {
        if (e.rowType === "data" && e.data?.cssClass) {
            e.rowElement.addClass(e.data.cssClass);
        }
    }
        });
    }



