@using DevExpress.XtraReports.UI
@{
    ViewBag.Title = ViewBag.ReportHeader;
    var report = ViewBag.ReportName as XtraReport;
}

<style>
    .filter_wrapper {
        padding: 18px 0px 0px 14px;
        border-radius: 8px;
    }

    .gridContainer {
        margin: 0px 8px;
    }

    .button_wrapper {
        display: flex;
        column-gap: 12px;
        margin: 0px 8px;
    }

        .button_wrapper .fa-solid {
            margin-right: 5px;
        }

    .selected {
        background-color: #4CAF50;
        color: white;
    }

    #gridContainer .dx-datagrid-rowsview .dx-selection {
        background-color: #01579b !important;
        color: white !important;
    }

        #gridContainer .dx-datagrid-rowsview .dx-selection * {
            color: white !important;
        }

    .sticky-header label,
    .sticky-header .form-control-sm {
        font-size: 0.75rem;
        line-height: 1.2;
    }


    .sticky-header .form-control-sm {
        padding: .1rem .35rem;
        height: calc(1.1em + .2rem + 2px);
    }

    .sticky-header label[class*="me-"] {
        margin-right: .5rem !important;
    }

    #gridContainer .dx-datagrid-headers .dx-header-row > td {
        padding: 5px !important;
        height: 24px !important;
        font-size: 12px !important;
        line-height: 1.1 !important;
    }

    #gridContainer .dx-datagrid-rowsview .dx-row > td,
    #gridContainer .dx-datagrid .dx-summary-row > td,
    #gridContainer .dx-datagrid .dx-total-footer td,
    #gridContainer .dx-datagrid .dx-footer-row td {
        font-size: 11px !important;
    }

    .report-bar {
        position: relative;
        margin-bottom: 1rem; /* = mb-3 của bạn */
    }

        /* Tiêu đề ở giữa, full width để text-center hoạt động */
        .report-bar #reportTitle {
            font-size: 20px;
            margin: 0; /* bỏ margin dưới h4/h5 mặc định */
            text-align: center;
        }

        /* Nhóm nút cố định góc phải, canh theo chiều dọc */
        .report-bar .action-buttons {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
        }

    .tomselect-custom {
        width: 300px;
        min-height: 30px; /* hoặc tùy theo chiều cao bạn muốn */
        font-size: 0.65rem;
    }
</style>
<div class="text-center" id="reportTitle" style="font-size: 20px"></div>

<div class="sticky-header bg-white p-2 shadow-sm z-3">
    <div class="d-flex flex-wrap align-items-center gap-2 mb-1" style="border: 1px solid #ced4da; border-radius: 6px; padding: 8px;">
        <div class="d-flex align-items-center me-3">
            <label class="me-2 mb-0">Date:</label>
            @{
                var today = DateTime.Today;
                var firstDayOfMonth = new DateTime(today.Year, today.Month, 1).ToString("yyyy-MM-dd");
            }
            <input type="date" id="businessDate" name="businessDate" class="form-control form-control-sm w-auto"
                   value="@firstDayOfMonth" />

        </div>  
        <div style="display:none" >
            <label class="me-2 mb-0">Reservation:</label>
            <select id="currency" name="currency" class="form-control form-control-sm w-auto">
                <option value="0">VND</option>
                
            </select>
        </div>
    </div>
  
    <div class="">
        <button style="border-radius: 4px;  margin-right: 6px;background-color: #3b9ac6;" id="btnPrint" class="mui-button mui-button-new"><i class="fa-solid fa-eye"></i>View</button>
        <button style="border-radius: 4px;  margin-right: 6px;background-color: green;" id="btnExportExcel" class="mui-button mui-button-new" type="button"> <i class="fa-solid fa-file-excel"></i> Excel</button>
        <button style="border-radius: 4px;  margin-right: 6px;background-color: darkorange;" id="btnExportPdf" class="mui-button mui-button-new" type="button"><i class="fas fa-eraser"></i> PDF</button>
        <button style="border-radius: 4px;  margin-right: 6px;background-color: crimson;" id="btnPrintGrid" class="mui-button mui-button-new" type="button">
            <i class="fa-solid fa-print"></i> Print
        </button>
    </div>
</div>
<div class="mui-card">
    <div id="gridWrapper" class="mt-2" style="max-height: 500px;">
        <div class="gridContainer mt-2" id="gridContainer"></div>
    </div>
</div>

<div id="loadingSpinner" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); z-index:1000;">
    <i class="fa-solid fa-spinner fa-spin"></i>
</div>

<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0');
        let day = date.getDate().toString().padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    $(document).ready(function () {
        const today = new Date();
        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
      
        $('#businessDate').val(formatDate(firstDayOfMonth));
        document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
    });

    $('#btnPrint').click(function () {
        $('#loadingSpinner').show();
        $.ajax({
            url: '/Report/ManagerReport',
            type: 'GET',
            headers: { "X-CSRF-TOKEN-HEADERNAME": $('input[name="__RequestVerificationToken"]').val() },
            data: {
                businessDate: $('#businessDate').val(),
                currency: $('#currency').val()
                
            },
            success: function (result) {
                console.log(result);
                initializeDataGrid(result);
                $('#loadingSpinner').hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $('#loadingSpinner').hide();
            }
        });
    });

        function initializeDataGrid(data) {
        const selectedDateString = $('#businessDate').val();
        const selectedDate = new Date(selectedDateString);
        const thisYear = selectedDate.getFullYear();     // năm hiện tại
        const lastYear = thisYear - 1;
        const safeData = Array.isArray(data) ? data : [];
        $('#gridContainer').dxDataGrid({
        dataSource: safeData, height: 500, allowColumnResizing: true,

            columns: [
            { dataField: "code", caption: "", width: 70 },
            { dataField: "itemName", caption: "", width: 250 },
            { dataField: "currentDay", caption: `${thisYear} DAY`, width: 150, dataType: "number", format: "#,##0" },
            { dataField: "currentMonth", caption: `${thisYear} MONTH`, width: 150, dataType: "number", format: "#,##0"},
            { dataField: "currentYear", caption: `${thisYear} YEAR`, width: 150, dataType: "number", format: "#,##0"},
            { dataField: "lastDay", caption: `${lastYear} DAY`, width: 150, dataType: "number", format: "#,##0"},
            { dataField: "lastMonth", caption: `${lastYear} MONTH`, width: 150, dataType: "number", format: "#,##0" },
            { dataField: "lastYear", caption: `${lastYear} YEAR`, width: 150, dataType: "number", format: "#,##0" },
        ],
            paging: {
                pageSize: 25
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, "all"],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            // scrolling: {
            //     
            //     useNative: true,
            //     showScrollbar: "always"
            // },
            selection: {
                mode: "multiple",
                showCheckBoxesMode: "none"
            },
            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            headerFilter: {
                visible: true
            },
            showBorders: true
        });
    }



    $("#btnExportExcel").click(function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';
        var selectedReport = '@ViewBag.ReportTitle';
        if (!selectedReport) {
            alert("Vui lòng chọn báo cáo trước khi xuất Excel.");
            return;
        }

                     const workbook = new ExcelJS.Workbook();const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";
        const worksheet = workbook.addWorksheet("Sheet 1");

        // === Tạo header công ty (dòng 1) ===
       worksheet.addRow([companyName]);
        worksheet.mergeCells('A1:E1');
        worksheet.getRow(1).font = { bold: true };
        worksheet.getRow(1).alignment = { vertical: 'middle', horizontal: 'left' };

        // === Dòng 2: Thời gian xuất (phải) ===
        const now = new Date();
        const exportDate = now.toLocaleString("vi-VN");
        worksheet.addRow(['', '', '', '', ' ' + exportDate]);
        worksheet.mergeCells('E2:H2');
        worksheet.getRow(2).alignment = { vertical: 'middle', horizontal: 'right' };

        // === Dòng 3–4: Trống
        worksheet.addRow([]);
        worksheet.addRow([]);

        // === Dòng 5: Tên báo cáo ở giữa ===
        const reportRow = worksheet.addRow(['', '', selectedReport]);
        worksheet.mergeCells('C5:F5');
        reportRow.font = { bold: true, size: 14 };
        reportRow.alignment = { vertical: 'middle', horizontal: 'center' };

        // === Dòng 6: Trống trước khi xuất dữ liệu
        worksheet.addRow([]);

        // === Export dữ liệu từ DevExtreme (bắt đầu từ dòng 7)
        DevExpress.excelExporter.exportDataGrid({
            component: grid,
            worksheet: worksheet,
            autoFilterEnabled: true,
            topLeftCell: { row: 7, column: 1 } // dữ liệu bắt đầu từ dòng 7
        }).then(function () {
            // Footer
            const lastRow = worksheet.lastRow.number + 2;

            worksheet.mergeCells(`A${lastRow}:F${lastRow}`);
            worksheet.getCell(`A${lastRow}`).alignment = { horizontal: 'center' };
            worksheet.getCell(`A${lastRow}`).font = { italic: true };

            // Ghi file
            let fileName = selectedReport + ".xlsx";
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: "application/octet-stream" }), fileName);
            });
        });
    });

       $("#btnExportPdf").click(function () {
        const grid = $("#gridContainer").dxDataGrid("instance");

        // Lấy đối tượng jsPDF từ window
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF({ orientation: "landscape", unit: "pt", format: "A4" });

        const selectedReport = '@ViewBag.ReportTitle';
        const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";

        grid.getDataSource().load().then(data => {
            const columns = grid.getVisibleColumns();

            const head = [columns.map(col => col.caption)];
            const body = data.map(row =>
                columns.map(col =>
                    col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField]
                )
            );

            doc.setFontSize(14);
            doc.setFont("Helvetica", "bold");
            doc.text(companyName, doc.internal.pageSize.getWidth() / 2, 40, { align: "center" });

            doc.setFontSize(12);
            doc.setFont("Helvetica", "normal");
            doc.text(selectedReport, doc.internal.pageSize.getWidth() / 2, 60, { align: "center" });

            // AutoTable
            doc.autoTable({
                startY: 80,
                head: head,
                body: body,
                 styles: { fontSize: 9, cellPadding: 4 , lineWidth: 0.5, lineColor: [0, 0, 0]    },
                headStyles: { fillColor: [41, 128, 185], textColor: 255, fontStyle: 'bold' },
                alternateRowStyles: { fillColor: [240, 240, 240] },
                margin: { left: 20, right: 20 }
            });

            doc.save(selectedReport + ".pdf");
        });
    });
            $("#btnPrintGrid").on("click", function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';

        // Lấy toàn bộ data từ dataSource
        grid.getDataSource().load().then(function (data) {
            // Tạo bảng HTML từ dữ liệu
            let tableHTML = '<table border="1" style="border-collapse: collapse; width: 100%;">';

            // Header
            const columns = grid.getVisibleColumns();
            tableHTML += "<thead><tr>";
            columns.forEach(col => {
                tableHTML += `<th style="padding: 5px; text-align: center;">${col.caption}</th>`;
            });
            tableHTML += "</tr></thead>";

            // Body
            tableHTML += "<tbody>";
            data.forEach(row => {
                tableHTML += "<tr>";
                columns.forEach(col => {
                    let value = col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField];
                    tableHTML += `<td style="padding: 5px;">${value ?? ""}</td>`;
                });
                tableHTML += "</tr>";
            });
            tableHTML += "</tbody></table>";

            // Mở cửa sổ in với nội dung bảng
            const printWindow = window.open('', '', 'height=800,width=1000');
            if (!printWindow) {
                alert("Trình duyệt đang chặn cửa sổ in.");
                return;
            }

           printWindow.document.write('<html><head><title>' + selectedReport2 + '</title>');
            printWindow.document.write('<style>table { font-family: Arial; font-size: 12px; }</style>');
            printWindow.document.write('</head><body>');
            printWindow.document.write(tableHTML);
            printWindow.document.write('</body></html>');
            printWindow.document.close();

            // Chờ nội dung render xong rồi in
            printWindow.onload = function () {
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            };
        });
    });
</script>
