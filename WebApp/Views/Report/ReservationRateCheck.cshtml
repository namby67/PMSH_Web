                { dataField: "arrival", caption: "Arrival", width: 110, dataType: "date", format: "yyyy-MM-dd" },
                { dataField: "departure", caption: "Departure", width: 110, dataType: "date", format: "yyyy-MM-dd" },
                { dataField: "nts", caption: "Nts.", dataType: "number", width: 90 },
                { dataField: "adl", caption: "Adl.", dataType: "number", width: 90 },
                { dataField: "chl", caption: "Chl.", dataType: "number", width: 90 },
                { dataField: "roomType", caption: "Room Type", width: 120 },
                { dataField: "rateCode", caption: "Rate Code", width: 120 },
                { dataField: "rateCodeAmt", caption: "Rate Code Amt.", width: 130, dataType: "number", format: "#,##0.00" },
                { dataField: "rateAmt", caption: "Rate Amt.", width: 130, dataType: "number", format: "#,##0.00" },
