@using DevExpress.XtraReports.UI
@{
    ViewBag.Title = ViewBag.ReportHeader;
    var zoneList = ViewBag.ZoneList;
}

<style>
    .filter_wrapper {
        padding: 18px 0px 0px 14px;
        border-radius: 8px;
    }

    .gridContainer {
        margin: 0px 8px;
    }

    .button_wrapper {
        display: flex;
        column-gap: 12px;
        margin: 0px 8px;
    }

    .radio_wrapper {
        margin: 8px 0 8px 14px;
    }

    #gridContainer .dx-datagrid-rowsview .dx-selection {
        background-color: #01579b !important;
        color: white !important;
    }

        #gridContainer .dx-datagrid-rowsview .dx-selection * {
            color: white !important;
        }
</style>

<div class="text-center" id="reportTitle" style="font-size: 20px"></div>
<div class="sticky-header bg-white p-2 shadow-sm z-3">
    <div class="d-flex flex-wrap align-items-center gap-2 mb-1" style="border: 1px solid #ced4da; border-radius: 6px; padding: 8px;">
        <div class="d-flex align-items-center">
            <label class="me-2 mb-0 fw-bold">Date:</label>
            <input type="date" id="fromDate" name="fromDate" class="form-control form-control-sm w-auto" max='@DateTime.Now.ToString("yyyy-MM-dd")' />
        </div>
        <div>         
            <div class="d-flex flex-wrap gap-3">
                <label class="fw-semibold mb-2 d-block fw-bold">Reservation Status</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="in" checked />
                    <label class="form-check-label" for="in">Checked In</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="reser" />
                    <label class="form-check-label" for="reser">Reservation</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="dueout" />
                    <label class="form-check-label" for="dueout">Due Out</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="out" />
                    <label class="form-check-label" for="out">Checked Out</label>
                </div>
            </div>
        </div>
    </div>

    <div class="button_wrapper">
        <button id="btnPrint" class="mui-button mui-button-new" style="border-radius: 4px; background-color: #3b9ac6;">
            <i class="fa-solid fa-eye"></i> View
        </button>
        <button id="btnExportExcel" class="mui-button mui-button-new" style="border-radius: 4px; background-color: #3b9ac6;">
            <i class="fa-solid fa-file-excel"></i> Excel
        </button>
        <button id="btnExportPdf" class="mui-button mui-button-new" style="border-radius: 4px; background-color: #3b9ac6;">
            <i class="fas fa-eraser"></i> PDF
        </button>
    </div>
</div>

<div class="mui-card">
    <div id="gridWrapper" class="mt-2" style="max-height: 500px;">
        <div class="gridContainer mt-2" id="gridContainer"></div>
    </div>
</div>

<div id="loadingSpinner" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); z-index:1000;">
    <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
</div>




<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0');
        let day = date.getDate().toString().padStart(2, '0');
        return `${year}-${month}-${day}`;
    }
            function getStatusList() {
        const statusMap = {
            in: ['1', '7'],
            reser: ['6', '7'],
            dueout: ['0', '5'],
            out: ['2', '7']
        };

        let selected = [];

        for (const key in statusMap) {
            if ($(`#${key}`).is(':checked')) {
                selected = selected.concat(statusMap[key]);
            }
        }

        const escaped = selected.map(s => `'${s}'`);
        return escaped.join(',');
    }




    $(document).ready(function () {
        const today = new Date();
        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
        $('#fromDate').val(formatDate(firstDayOfMonth));
        document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        $("#btnPrint").click(function () {
            $("#loadingSpinner").show();
            document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';

            $.ajax({
                url: '/Report/GuestLedger',
                type: 'GET',
                data: {
                    date: $("#fromDate").val(),
                    statusList: getStatusList()
                },
                success: function (result) {
                    const data = prepareRevenueData(result);
                    initializeGrid(data);
                    $("#loadingSpinner").hide();
                },
                error: function () {
                    alert("Không thể tải báo cáo.");
                    $("#loadingSpinner").hide();
                }
            });
        });


    $("#btnExportExcel").click(function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';
        var selectedReport = '@ViewBag.ReportTitle';
        if (!selectedReport) {
            alert("Vui lòng chọn báo cáo trước khi xuất Excel.");
            return;
        }

                     const workbook = new ExcelJS.Workbook();const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";
        const worksheet = workbook.addWorksheet("Sheet 1");

        // === Tạo header công ty (dòng 1) ===
       worksheet.addRow([companyName]);
        worksheet.mergeCells('A1:E1');
        worksheet.getRow(1).font = { bold: true };
        worksheet.getRow(1).alignment = { vertical: 'middle', horizontal: 'left' };

        // === Dòng 2: Thời gian xuất (phải) ===
        const now = new Date();
        const exportDate = now.toLocaleString("vi-VN");
        worksheet.addRow(['', '', '', '', ' ' + exportDate]);
        worksheet.mergeCells('E2:H2');
        worksheet.getRow(2).alignment = { vertical: 'middle', horizontal: 'right' };

        // === Dòng 3–4: Trống
        worksheet.addRow([]);
        worksheet.addRow([]);

        // === Dòng 5: Tên báo cáo ở giữa ===
        const reportRow = worksheet.addRow(['', '', selectedReport]);
        worksheet.mergeCells('C5:F5');
        reportRow.font = { bold: true, size: 14 };
        reportRow.alignment = { vertical: 'middle', horizontal: 'center' };

        // === Dòng 6: Trống trước khi xuất dữ liệu
        worksheet.addRow([]);

        // === Export dữ liệu từ DevExtreme (bắt đầu từ dòng 7)
        DevExpress.excelExporter.exportDataGrid({
            component: grid,
            worksheet: worksheet,
            autoFilterEnabled: true,
            topLeftCell: { row: 7, column: 1 } // dữ liệu bắt đầu từ dòng 7
        }).then(function () {
            // Footer
            const lastRow = worksheet.lastRow.number + 2;

            worksheet.mergeCells(`A${lastRow}:F${lastRow}`);
            worksheet.getCell(`A${lastRow}`).alignment = { horizontal: 'center' };
            worksheet.getCell(`A${lastRow}`).font = { italic: true };

            // Ghi file
            let fileName = selectedReport + ".xlsx";
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: "application/octet-stream" }), fileName);
            });
        });
    });

              $("#btnExportPdf").click(function () {
        const grid = $("#gridContainer").dxDataGrid("instance");

        // Lấy đối tượng jsPDF từ window
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF({ orientation: "landscape", unit: "pt", format: "A4" });

        const selectedReport = '@ViewBag.ReportTitle';
        const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";

        grid.getDataSource().load().then(data => {
            const columns = grid.getVisibleColumns();

            const head = [columns.map(col => col.caption)];
            const body = data.map(row =>
                columns.map(col =>
                    col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField]
                )
            );

            doc.setFontSize(14);
            doc.setFont("Helvetica", "bold");
            doc.text(companyName, doc.internal.pageSize.getWidth() / 2, 40, { align: "center" });

            doc.setFontSize(12);
            doc.setFont("Helvetica", "normal");
            doc.text(selectedReport, doc.internal.pageSize.getWidth() / 2, 60, { align: "center" });

            // AutoTable
            doc.autoTable({
                startY: 80,
                head: head,
                body: body,
                 styles: { fontSize: 9, cellPadding: 4 , lineWidth: 0.5, lineColor: [0, 0, 0]    },
                headStyles: { fillColor: [41, 128, 185], textColor: 255, fontStyle: 'bold' },
                alternateRowStyles: { fillColor: [240, 240, 240] },
                margin: { left: 20, right: 20 }
            });

            doc.save(selectedReport + ".pdf");
        });
    });
    });


    function prepareRevenueData(data) {
        const grouped = {};
        const result = [];

        data.forEach(item => {
            const key = item.reservation || "Unknown";
            if (!grouped[key]) grouped[key] = [];
            grouped[key].push(item);
        });

        Object.entries(grouped).forEach(([groupName, items]) => {
            const groupHeader = {
                roomNo: groupName,
                name: "",
                confirmationNo: "",
                arrivalDate: "",
                departureDate: "",
                folioID: "",
                amount: "",
                currencyID: "",               
                cssClass: "group-header"
            };
            result.push(groupHeader);
            result.push(...items);

            const subtotalRow = {
                roomNo: "",
                name: "",
                confirmationNo: "",
                arrivalDate: "",
                departureDate: "",
                folioID: "Subtotal:",
                amount: sum(items, "amount"),
                currencyID: "",
                cssClass: "subtotal"
            };
            result.push(subtotalRow);
        });

        const grandTotalRow = {
            roomNo: "",
            name: "",
            confirmationNo: "",
            arrivalDate: "",
            departureDate: "",
            folioID: "Grand Total:",
            amount: sum(data, "amount"),
            currencyID: "",       
            cssClass: "grandtotal"
        };

        result.push(grandTotalRow);
        return result;
    }

    function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

    function initializeGrid(data) {
        $("#gridContainer").dxDataGrid({
           dataSource: data,         height: 500,
            showBorders: true,
            rowAlternationEnabled: true,
            columns: [
                { dataField: "roomNo", caption: "Room No", width: 140 },              
                { dataField: "lastName", caption: "Name", width: 250 },        
                { dataField: "confirmationNo", caption: "Conf. No", width: 100 },
                { dataField: "arrivalDate", caption: "Arr. Date", dataType: "date", format: "dd/MM/yyyy", width: 110 },
                { dataField: "departureDate", caption: "Dep. Date", dataType: "date", format: "dd/MM/yyyy", width: 110 },
                { dataField: "folioID", caption: "Folio No", width: 100 },
                { dataField: "amount", caption: "Balance", width: 120, dataType: "number", format: "#,##0" },
                { dataField: "currencyID", caption: "Curr.", width: 80 }
            ],
            onRowPrepared: function (e) {
                if (e.rowType === "data") {
                    if (e.data?.cssClass === "group-header") {
                        e.rowElement.css({ 'font-weight': 'bold', 'background-color': '#e3f2fd' });
                    } else if (e.data?.cssClass === "subtotal") {
                        e.rowElement.css({ 'font-weight': 'bold', 'background-color': '#f1f8e9' });
                    } else if (e.data?.cssClass === "grandtotal") {
                        e.rowElement.css({ 'font-weight': 'bold', 'background-color': '#ffe0b2' });
                    }
                }
            },
            paging: { pageSize: 25 },
               scrolling: {
                
                useNative: true,
                showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },
            filterRow: { visible: true, applyFilter: "auto" },
            headerFilter: { visible: true }
        });
    }
</script>







