      function prepareReservationSummaryData(data) {
        const groupedData = {};

        // Group by MonthDisplay
        data.forEach(item => {
            const key = item.monthDisplay;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([month, records]) => {
             finalData.push({
            weekDate: records[0].monthDisplay,
            isTitle: true,
            cssClass: "custom" // Nếu cần CSS riêng cho tiêu đề
        });
            finalData.push(...records);

            const totalRow = {
                rsvSummaryDate: "MONTHLY TOTAL",
                weekDate:"",
                totalOccRms: sum(records, 'totalOccRms'),
                indRms: sum(records, 'indRms'),
                blkRmsPU: sum(records, 'blkRmsPU'),
                blkRmsNotPU: sum(records, 'blkRmsNotPU'),
                   totalAvailable: sum(records, 'totalAvailable'),

                occPer: sum(records, 'occPer'),
                roomRevenue: sum(records, 'roomRevenue'),
                grpRevenue: sum(records, 'grpRevenue'),
                indRevenue: sum(records, 'indRevenue'),
                avrRate: average(records, 'avrRate'),

                  arrRms: sum(records, 'arrRms'),
                blkArrRms: sum(records, 'blkArrRms'),
                charrRms: sum(records, 'charrRms'),

                    totalArrRms: averageOfSums(records, ['arrRms', 'blkArrRms', 'charrRms']),


                depRms: sum(records, 'depRms'),
                blkDepRms: sum(records, 'blkDepRms'),
                chdepRms: sum(records, 'chdepRms'),

                  totalDepRms: averageOfSums(records, ['depRms', 'blkDepRms', 'chdepRms']),

                oOORms: sum(records, 'oOORms'),
                adl: average(records, 'adl'),


                                chl: sum(records, 'chl'),
                chl1: sum(records, 'chl1'),
                chl2: sum(records, 'chl2'),
                totPer: sum(records, 'totPer'),
                arrPrs: sum(records, 'arrPrs'),
                depPrs: sum(records, 'depPrs'),
                isTotal: true ,
                    cssClass: "custom",// Để phân biệt dòng tổng
            };

            finalData.push(totalRow);
        });

        return finalData;
    }
      function averageOfSums(arr, fields) {
        if (arr.length === 0) return 0;
        let total = 0;
        fields.forEach(field => {
            total += sum(arr, field);
        });
        return total / fields.length;
    }

    // Helper functions
    function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }
