    });
          function prepareReservationByCompanyData(data) {
        const groupedData = {};
        const selectedOptions = [];

        // Lấy các checkbox được chọn
        $(".include-option:checked").each(function() {
            selectedOptions.push($(this).val());
        });

        // Group dữ liệu theo các checkbox được chọn
        data.forEach(item => {
            let key = null;

            if (selectedOptions.includes("0") && item.company) {
                key = item.company;
            } else if (selectedOptions.includes("1") && item.agent) {
                key = item.agent;
            } else if (selectedOptions.includes("2") && item.source) {
                key = item.source;
            } else if (selectedOptions.includes("3") && item.group) {
                key = item.group;
            }  
            else if (selectedOptions.includes("4") && item.group) {
                key = item.rateCode;
            }
            else if (selectedOptions.includes("5") && item.group) {
                key = item.reservationTypeCode;
            }

            if (key) {
                if (!groupedData[key]) groupedData[key] = [];
                groupedData[key].push(item);
            }
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([groupKey, records]) => {
            finalData.push(...records);

            const totalRow = {
                company: "TOTAL",  // Đặt tên hiển thị
        agent: "",
        source: "",
        group: groupKey,  // Hiển thị tên nhóm (nếu có)
        // Tính tổng cho các trường cần thiết
        noOfAdult: sum(records, 'noOfAdult'),
        noOfChild: sum(records, 'noOfChild'),
        noOfChild1: sum(records, 'noOfChild1'),
        noOfRoom: sum(records, 'noOfRoom'),
        noOfNight: sum(records, 'noOfNight'),
               cssClass: "custom",
        isTotal: true // Cờ dòng tổng
            };

            finalData.push(totalRow);
        });

        return finalData;
    }

     function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

   

