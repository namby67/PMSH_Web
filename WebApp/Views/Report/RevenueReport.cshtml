<div class="text-center" id="reportTitle" style="font-size: 20px"></div>
<div class="filter-panel">
<div class="sticky-header bg-white p-2 shadow-sm z-3">
        <div class="d-flex flex-wrap align-items-center gap-3 mb-1" style="border: 1px solid #ced4da; border-radius: 6px; padding: 8px;">
        <div class="d-flex align-items-center">
            <label class="me-2 mb-0">Date:</label>
            <input type="date" id="fromDate" name="fromDate" class="form-control form-control-sm w-auto" max='@DateTime.Now.ToString("yyyy-MM-dd")' />
        </div>
            <div class="radio_wrapper flex-wrap align-items-center">
            <label class="me-2">Type:</label>
            <label class="me-2"><input type="radio" name="reportType" value="0" checked /> Revenue</label>
            <label class="me-2"><input type="radio" name="reportType" value="1" /> Payment</label>
            <label class="me-2"><input type="radio" name="reportType" value="2" /> NonRevenue</label>
            <label><input type="radio" name="reportType" value="3" /> All</label>
        </div>
    </div>
   
    <div class="">
        <button style="border-radius: 4px;  margin-right: 6px;background-color: #3b9ac6;" id="btnPrint" class="mui-button mui-button-new"><i class="fa-solid fa-eye"></i>View</button>
        <button style="border-radius: 4px;  margin-right: 6px;background-color: green;" id="btnExportExcel" class="mui-button mui-button-new" type="button"> <i class="fa-solid fa-file-excel"></i> Excel</button>
        <button style="border-radius: 4px;  margin-right: 6px;background-color: darkorange;" id="btnExportPdf" class="mui-button mui-button-new" type="button"><i class="fas fa-eraser"></i> PDF</button>

        <button style="border-radius: 4px;  margin-right: 6px;background-color: crimson;" id="btnPrintGrid" class="mui-button mui-button-new" type="button">
            <i class="fa-solid fa-print"></i> Print
        </button>
        </div>
    </div>
</div>

<div class="mui-card">
    <div id="gridWrapper" class="mt-2" style="max-height: 500px;">
        <div class="gridContainer mt-2" id="gridContainer"></div>
    </div>
</div>

<div id="loadingSpinner" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); z-index:1000;">
    <i class="fa-solid fa-spinner fa-spin fa-2x"></i>
</div>


    <script>
        function formatDate(date) {
            let year = date.getFullYear();
            let month = (date.getMonth() + 1).toString().padStart(2, '0');
            let day = date.getDate().toString().padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        $(document).ready(function () {
            const today = new Date();
            const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
            $('#fromDate').val(formatDate(firstDayOfMonth));

            document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';

            $("#btnPrint").click(function () {
                $("#loadingSpinner").show();

                $.ajax({
                    url: '/Report/RevenueReports',
                    type: 'GET',
                    data: {
                        fromDate: $("#fromDate").val(),
                        type: $("input[name='reportType']:checked").val()
                    },
                    success: function (result) {
                        const data = prepareRevenueData(result);
                        initializeGrid(data);
                        $("#loadingSpinner").hide();
                    },
                    error: function () {
                        alert("Không thể tải báo cáo.");
                        $("#loadingSpinner").hide();
                    }
                });
            });


    $("#btnExportExcel").click(function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';
        var selectedReport = '@ViewBag.ReportTitle';
        if (!selectedReport) {
            alert("Vui lòng chọn báo cáo trước khi xuất Excel.");
            return;
        }

                     const workbook = new ExcelJS.Workbook();const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";
        const worksheet = workbook.addWorksheet("Sheet 1");

        // === Tạo header công ty (dòng 1) ===
       worksheet.addRow([companyName]);
        worksheet.mergeCells('A1:E1');
        worksheet.getRow(1).font = { bold: true };
        worksheet.getRow(1).alignment = { vertical: 'middle', horizontal: 'left' };

        // === Dòng 2: Thời gian xuất (phải) ===
        const now = new Date();
        const exportDate = now.toLocaleString("vi-VN");
        worksheet.addRow(['', '', '', '', ' ' + exportDate]);
        worksheet.mergeCells('E2:H2');
        worksheet.getRow(2).alignment = { vertical: 'middle', horizontal: 'right' };

        // === Dòng 3–4: Trống
        worksheet.addRow([]);
        worksheet.addRow([]);

        // === Dòng 5: Tên báo cáo ở giữa ===
        const reportRow = worksheet.addRow(['', '', selectedReport]);
        worksheet.mergeCells('C5:F5');
        reportRow.font = { bold: true, size: 14 };
        reportRow.alignment = { vertical: 'middle', horizontal: 'center' };

        // === Dòng 6: Trống trước khi xuất dữ liệu
        worksheet.addRow([]);

        // === Export dữ liệu từ DevExtreme (bắt đầu từ dòng 7)
        DevExpress.excelExporter.exportDataGrid({
            component: grid,
            worksheet: worksheet,
            autoFilterEnabled: true,
            topLeftCell: { row: 7, column: 1 } // dữ liệu bắt đầu từ dòng 7
        }).then(function () {
            // Footer
            const lastRow = worksheet.lastRow.number + 2;

            worksheet.mergeCells(`A${lastRow}:F${lastRow}`);
            worksheet.getCell(`A${lastRow}`).alignment = { horizontal: 'center' };
            worksheet.getCell(`A${lastRow}`).font = { italic: true };

            // Ghi file
            let fileName = selectedReport + ".xlsx";
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: "application/octet-stream" }), fileName);
            });
        });
    });
        });

        function prepareRevenueData(data) {
            const grouped = {};
            const result = [];

            data.forEach(item => {
                const key = item.subGroupDescription || "Unknown";
                if (!grouped[key]) grouped[key] = [];
                grouped[key].push(item);
            });

            Object.entries(grouped).forEach(([groupName, items]) => {
                const groupHeader = {
                    transactionCode: groupName,
                    transactionName: "",
                    currencyID: "",
                    subGroupDescription: "",
                    amountBeForeTax: "",
                    amountGross: "",
                    amountBeforeTaxM: "",
                    amountGrossM: "",
                    amountBeforeTaxY: "",
                    amountGrossY: "",
                    cssClass: "group-header"
                };
                result.push(groupHeader);
                result.push(...items);

                const subtotalRow = {
                    transactionCode: "",
                    transactionName: "Sub Total:",
                    currencyID: "VND",
                    subGroupDescription: "",
                    amountBeForeTax: sum(items, "amountBeForeTax"),
                    amountGross: sum(items, "amountGross"),
                    amountBeforeTaxM: sum(items, "amountBeforeTaxM"),
                    amountGrossM: sum(items, "amountGrossM"),
                    amountBeforeTaxY: sum(items, "amountBeforeTaxY"),
                    amountGrossY: sum(items, "amountGrossY"),
                    cssClass: "subtotal"
                };
                result.push(subtotalRow);
            });

            const grandTotalRow = {
                transactionCode: "Grand Total:",
                transactionName: "",
                currencyID: "VND",
                subGroupDescription: "",
                amountBeForeTax: sum(data, "amountBeForeTax"),
                amountGross: sum(data, "amountGross"),
                amountBeforeTaxM: sum(data, "amountBeforeTaxM"),
                amountGrossM: sum(data, "amountGrossM"),
                amountBeforeTaxY: sum(data, "amountBeforeTaxY"),
                amountGrossY: sum(data, "amountGrossY"),
                cssClass: "grandtotal"
            };

            result.push(grandTotalRow);
            return result;
        }

        function sum(arr, field) {
            return arr.reduce((total, item) => total + (item[field] || 0), 0);
        }

        function initializeGrid(data) {
            $("#gridContainer").dxDataGrid({
               dataSource: data,         height: "auto",
                showBorders: true,
                rowAlternationEnabled: true,
                    columns: [
                    { dataField: "transactionCode", caption: "Code", width: 150 },
                    { dataField: "transactionName", caption: "Description", width: 250 },
                    { dataField: "currencyID", caption: "Curr", width: 80 },
                    { dataField: "amountBeForeTax", caption: "DAY Net", dataType: "number", format: "#,##0", width: 160 },
                    { dataField: "amountGross", caption: "DAY Gross", dataType: "number", format: "#,##0", width: 160 },
                    { dataField: "amountBeforeTaxM", caption: "MONTH Net", dataType: "number", format: "#,##0", width: 160 },
                    { dataField: "amountGrossM", caption: "MONTH Gross", dataType: "number", format: "#,##0", width: 160 },
                    { dataField: "amountBeforeTaxY", caption: "YEAR Net", dataType: "number", format: "#,##0", width: 160 },
                    { dataField: "amountGrossY", caption: "YEAR Gross", dataType: "number", format: "#,##0", width: 160 }
                ],

                onRowPrepared: function (e) {
                    if (e.rowType === "data") {
                        if (e.data?.cssClass === "group-header") {
                            e.rowElement.css({
                                'font-weight': 'bold',
                             
                            });
                        } else if (e.data?.cssClass === "subtotal") {
                            e.rowElement.css({
                                'font-weight': 'bold',
                              
                            });
                        } else if (e.data?.cssClass === "grandtotal") {
                            e.rowElement.css({
                                'font-weight': 'bold',
                         
                            });
                        }
                    }
                },
                paging: { pageSize: 25 },
                pager: {
                    visible: true,
                    allowedPageSizes: [25, 50, 'all'],
                    showPageSizeSelector: true,
                    showInfo: true,
                    showNavigationButtons: true
                },
                filterRow: { visible: true, applyFilter: "auto" },
                headerFilter: { visible: true }
            });
        }
                $("#btnPrintGrid").on("click", function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';

        // Lấy toàn bộ data từ dataSource
        grid.getDataSource().load().then(function (data) {
            // Tạo bảng HTML từ dữ liệu
            let tableHTML = '<table border="1" style="border-collapse: collapse; width: 100%;">';

            // Header
            const columns = grid.getVisibleColumns();
            tableHTML += "<thead><tr>";
            columns.forEach(col => {
                tableHTML += `<th style="padding: 5px; text-align: center;">${col.caption}</th>`;
            });
            tableHTML += "</tr></thead>";

            // Body
            tableHTML += "<tbody>";
            data.forEach(row => {
                tableHTML += "<tr>";
                columns.forEach(col => {
                    let value = col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField];
                    tableHTML += `<td style="padding: 5px;">${value ?? ""}</td>`;
                });
                tableHTML += "</tr>";
            });
            tableHTML += "</tbody></table>";

            // Mở cửa sổ in với nội dung bảng
            const printWindow = window.open('', '', 'height=800,width=1000');
            if (!printWindow) {
                alert("Trình duyệt đang chặn cửa sổ in.");
                return;
            }

           printWindow.document.write('<html><head><title>' + selectedReport2 + '</title>');
            printWindow.document.write('<style>table { font-family: Arial; font-size: 12px; }</style>');
            printWindow.document.write('</head><body>');
            printWindow.document.write(tableHTML);
            printWindow.document.write('</body></html>');
            printWindow.document.close();

            // Chờ nội dung render xong rồi in
            printWindow.onload = function () {
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            };
        });
    });
    </script>

