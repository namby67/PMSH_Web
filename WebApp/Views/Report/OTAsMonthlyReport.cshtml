       function initializeOTAsMonthly(response) {
        const data = response.data;
        const monthHeaders = response.monthHeaders;
        const columnWidth = 180;

        const columns = [
            {
                caption: "Holder",
                columns: [
                    { dataField: "guestNo", caption: "Acc.No", width: columnWidth - 50 },
                    { dataField: "guestName", caption: "Account", width: columnWidth + 250 }
                ]
            }
        ];

        const totalItems = [];

        for (let i = 0; i < monthHeaders.length; i++) {
            const nightColumnName = `roomNight_${i}`;
            const revenueColumnName = `roomRevenue_${i}`;

            columns.push({
                caption: monthHeaders[i],
                columns: [
                    {
                        dataField: null,
                        name: nightColumnName,
                        caption: "Room night",
                        cellTemplate: function (container, options) {
                            const rowData = options.data;
                            const value = Math.round(rowData?.roomNights?.[i]?.value || 0);
                            container.text(value.toLocaleString('vi-VN'));
                        },
                        width: columnWidth - 60,
                        dataType: "number"
                    },
                    {
                        dataField: null,
                        name: revenueColumnName,
                        caption: "Room revenue",
                        cellTemplate: function (container, options) {
                            const rowData = options.data;
                            const value = Math.round(rowData?.roomRevenue?.[i]?.value || 0);
                            container.text(value.toLocaleString('vi-VN'));
                        },
                        width: columnWidth - 60,
                        dataType: "number"
                    }
                ]
            });

            // Tổng Room night
            totalItems.push({
                name: `total_${nightColumnName}`,
                summaryType: "custom",
                showInColumn: nightColumnName,
                displayFormat: " {0}",
                valueFormat: "#,##0"
            });

            // Tổng Room revenue
            totalItems.push({
                name: `total_${revenueColumnName}`,
                summaryType: "custom",
                showInColumn: revenueColumnName,
                displayFormat: " {0}",
                valueFormat: "#,##0"
            });
        }

        // ✅ Thêm tổng đếm số dòng ở cột guestName
        totalItems.unshift({
            column: "guestName",
            summaryType: "count",
            displayFormat: "Total: {0}"
        });

        $("#gridContainer").dxDataGrid({
          dataSource: data,     height: 500, allowColumnResizing: true,
    scrolling: {
        mode: "standard",
        useNative: true,
        showScrollbar: "always"
    },
            columns: columns,
            paging: { pageSize: 20 },
            scrolling: {
                useNative: true,
                showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            filterRow: { visible: true, applyFilter: "auto" },
            headerFilter: { visible: true },
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
            showBorders: true,
            showTotalSummary: true,
            summary: {
                totalItems: totalItems,
                calculateCustomSummary: function (e) {
                    const prefixNight = "total_roomNight_";
                    const prefixRevenue = "total_roomRevenue_";

                    let index = null;
                    let isRevenue = false;

                    if (e.name.startsWith(prefixNight)) {
                        index = parseInt(e.name.replace(prefixNight, ""));
                        isRevenue = false;
                    } else if (e.name.startsWith(prefixRevenue)) {
                        index = parseInt(e.name.replace(prefixRevenue, ""));
                        isRevenue = true;
                    } else {
                        return;
                    }

                    if (e.summaryProcess === "start") {
                        e.totalValue = 0;
                    } else if (e.summaryProcess === "calculate") {
                        const row = e.value;
                        const value = isRevenue
                            ? parseFloat(row?.roomRevenue?.[index]?.value || 0)
                            : parseFloat(row?.roomNights?.[index]?.value || 0);
                        e.totalValue += value;
                    }
                }
            },
            onRowPrepared: function (e) {
                if (e.rowType === "data") {
                    if (e.data?.isTitle) {
                        e.rowElement.css({ "font-weight": "bold", "background-color": "#e0e0e0" });
                    }
                    if (e.data?.isTotal) {
                        e.rowElement.css({ "font-weight": "bold", "background-color": "#f6f6f6" });
                    }
                }
            }
        });
    }




