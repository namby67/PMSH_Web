    function initializeReservationSummaryGrid(data, grandTotal) {
        const columnWidth = 180;

        $("#gridContainer").dxDataGrid({
               dataSource: data,         height: 500,
            allowColumnResizing: true,
            columns: [

                { dataField: "articleCode", caption: "Code", width: columnWidth - 80 },
                { dataField: "articleDescription", caption: "Description", width: columnWidth + 50 },
                { dataField: "quantity", caption: "Quantity", width: columnWidth - 40 },
                { dataField: "price", caption: "Price", width: columnWidth - 50, dataType: "number", format: "#,##0" },
                { dataField: "amountBeforeTax", caption: "Amount++", width: columnWidth - 50, dataType: "number", format: "#,##0"},
                { dataField: "amount", caption: "Amount Net", width: columnWidth - 50, dataType: "number", format: "#,##0" }
            ],
                summary: {
                      totalItems: [
                    { name:"arDescription", column:"articleDescription", summaryType:"custom", displayFormat:"Grand Total:" },
                    { name:"qty",          column:"quantity",        summaryType:"custom", displayFormat:"{0}" },
                    { name:"amtBeforeTax", column:"amountBeforeTax", summaryType:"custom", valueFormat:"#,##0" },
                    { name:"amt",          column:"amount",          summaryType:"custom", valueFormat:"#,##0" }
                  ],

                  // Đây mới là hàm DevExtreme sẽ gọi khi summaryType="custom"
                  calculateCustomSummary: function (e) {
                      if (e.summaryProcess === "finalize") {
                          if (e.name === "qty")          e.totalValue = grandTotal.quantity;
                          if (e.name === "amtBeforeTax") e.totalValue = grandTotal.amountBeforeTax;
                          if (e.name === "amt")          e.totalValue = grandTotal.amount;
                      }
                  }
                },

            paging: { pageSize: 25 },
            scrolling: {
                
                useNative: true,
                showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            filterRow: { visible: true, applyFilter: "auto" },
            headerFilter: { visible: true },
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
            showBorders: true,
