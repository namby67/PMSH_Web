       function prepareArticleByRoomsData(data) {
        const groupedData = {};
        const finalData = [];

       data.forEach(item => {
        const key = item.roomNo || ""; // nếu null thì gán rỗng
        if (!groupedData[key]) groupedData[key] = [];
        groupedData[key].push(item);
    });

    const isLeadingZero = (str) => /^0\d+/.test(str); // true nếu có số 0 đầu

    const sortedEntries = Object.entries(groupedData).sort(([a], [b]) => {
        // Xử lý null hoặc ""
        if (!a && b) return -1;
        if (a && !b) return 1;
        if (!a && !b) return 0;

        const aHasZero = isLeadingZero(a);
        const bHasZero = isLeadingZero(b);

        // Nếu a có 0 đầu và b không → a đứng sau
        if (aHasZero && !bHasZero) return 1;
        if (!aHasZero && bHasZero) return -1;

        // Cả hai cùng nhóm → sắp theo giá trị số
        return parseInt(a) - parseInt(b);
    });

    sortedEntries.forEach(([roomNo, records]) => {
        const firstRecord = records[0];

        finalData.push({
            articleCode: `Room: ${roomNo || ""}`,
            articleDescription: `${firstRecord.lastName}`,
            quantity: ` C: ${firstRecord.confirmationNo} `,
            price: ` ${toDMY(firstRecord.arrivalDate)}`,
            amountBeforeTax: ` ${toDMY(firstRecord.departureDate)}`,
            isTitle: true,
            cssClass: "custom"
        });

        finalData.push(...records);

        finalData.push({
            articleDescription: "Sub Total",
            quantity: sum(records, 'quantity'),
            amountBeforeTax: sum(records, 'amountBeforeTax'),
            amount: sum(records, 'amount'),
            isTotal: true,
            cssClass: "custom"
        });
    });


        // 👉 Tính Grand Total một lần ở đây
        const grandTotal = {
            quantity: sum(data, 'quantity'),
            amountBeforeTax: sum(data, 'amountBeforeTax'),
            amount: sum(data, 'amount')
        };

        return { data: finalData, grandTotal };
    }


      function averageOfSums(arr, fields) {
        if (arr.length === 0) return 0;
        let total = 0;
        fields.forEach(field => {
            total += sum(arr, field);
        });
        return total / fields.length;
    }

    // Helper functions
   function sum(arr, field) {
    return arr.reduce((total, item) => {
        let val = field ? item?.[field] : item;

        // loại bỏ null/undefined
        if (val == null) return total;

        // Nếu là chuỗi, bỏ ký tự không phải số, dấu phẩy, khoảng trắng
        if (typeof val === "string") {
            val = val.replace(/[^0-9.-]/g, "");  // giữ lại số, dấu - và .
        }

        val = parseFloat(val);
        return Number.isFinite(val) ? total + val : total;
    }, 0);
}

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }
        function toDMY(date){
        if (!date) return "";
        return new Date(date).toLocaleDateString("vi-VN"); // hoặc format khác tuỳ ý
