<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0');
        let day = date.getDate().toString().padStart(2, '0');
        return `${year}-${month}-${day}`;
    }

    $(document).ready(function () {
        document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        const today = new Date();
        const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
        const lastDay = new Date(today.getFullYear(), today.getMonth() + 1, 0);
        $('#fromDate').val(formatDate(firstDay));
        $('#toDate').val(formatDate(lastDay));
    });

    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        $("#loadingSpinner").show();
        $.ajax({
            url: '/Report/SummarybyArticle',
            type: 'GET',
            data: {
                fromDate: $('#fromDate').val(),
                toDate: $('#toDate').val(),
                show: $("#show").val()
            },
            headers: {
                "X-CSRF-TOKEN-HEADERNAME": $("input[name='__RequestVerificationToken']").val()
            },
            success: function (result) {
                const data = prepareRevenueData(result);
                initializeDataGrid(data);
                $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });
          function calculateAmount(price, quantity) {
        return (parseFloat(price) || 0) * (parseFloat(quantity) || 0);
    }

    function sum(arr, field) {
        return arr.reduce((total, item) => total + (parseFloat(item[field]) || 0), 0);
    }

        function calculateTotalAmount(arr, priceField, quantityField) {
        return arr.reduce((total, item) => {
            const price = parseFloat(item[priceField]) || 0;
            const qty = parseFloat(item[quantityField]) || 0;
            return total + price * qty;
        }, 0);
    }



        function prepareRevenueData(data) {
        const grouped = {};
        const result = [];

        data.forEach(item => {
            const groupKey = item.transactionGroup || "Unknown";
            const subGroupKey = item.transactionSubGroup || "Sub Unknown";
            const codeKey = item.transactionCode || "Code";

            if (!grouped[groupKey]) grouped[groupKey] = {};
            if (!grouped[groupKey][subGroupKey]) grouped[groupKey][subGroupKey] = {};
            if (!grouped[groupKey][subGroupKey][codeKey]) grouped[groupKey][subGroupKey][codeKey] = {
                header: {
                    transactionCode: codeKey,
                    articleDescription: item.trnsDescription || item.description || "",
                    quantity: "",
                    price: "",
                    amountBeforeTax: "",
                    amount: "",
                    userName: "",
                    cssClass: "code-header"
                },
                details: []
            };

            //  Custom dòng chi tiết:
            const detailItem = {
                ...item,
                transactionCode: item.articleCode || "", // dùng mã sản phẩm
                articleDescription: `${subGroupKey} - ${item.articleDescription || item.description || ""}` // thêm nhóm con vào mô tả
            };

            grouped[groupKey][subGroupKey][codeKey].details.push(detailItem);
        });

             Object.entries(grouped)
            .sort(([a], [b]) => {
                if (a === "Food and Beverage") return -1;
                if (b === "Food and Beverage") return 1;
                return a.localeCompare(b);
            })
            .forEach(([groupName, subGroups]) => {
                result.push({
                    transactionCode: groupName,
                    articleDescription: "",
                    quantity: "",
                    price: "",
                    amountBeforeTax: "",
                    amount: "",
                    userName: "",
                    cssClass: "group-header"
                });


            Object.entries(subGroups).forEach(([subGroupName, codes]) => {
                result.push({
                    transactionCode: subGroupName,
                    articleDescription: "",
                    quantity: "",
                    price: "",
                    amountBeforeTax: "",
                    amount: "",
                    userName: "",
                    cssClass: "subgroup-header"
                });

                Object.entries(codes).forEach(([code, codeObj]) => {
                    result.push({
                        transactionCode: codeObj.header.transactionCode,
                        articleDescription: codeObj.header.articleDescription,
                        quantity: "",
                        price: "",
                        amountBeforeTax: "",
                        amount: "",
                        userName: "",
                        cssClass: "code-header"
                    });
                        const mergedByArticle = {};
                        const clean = str => parseFloat((str || "").toString().replace(/,/g, "")) || 0;

                        codeObj.details.forEach(item => {
                        const key = item.articleCode;
                        const itemQty = clean(item.quantity);
                        const itemPrice = clean(item.price);
                        const itemBeforeTax = clean(item.amountBeforeTax);

                        if (!mergedByArticle[key]) {
                            mergedByArticle[key] = {
                                ...item,
                                quantity: itemQty,
                                price: itemPrice,
                                amountBeforeTax: itemBeforeTax,
                                amount: itemQty * itemPrice
                            };
                        } else {
                            mergedByArticle[key].quantity += itemQty;
                            mergedByArticle[key].amountBeforeTax += itemBeforeTax;
                            mergedByArticle[key].amount = mergedByArticle[key].quantity * mergedByArticle[key].price;
                        }
                    });
                        const mergedItems = Object.values(mergedByArticle);
                         result.push(...mergedItems);
             

                

                    //  Total theo từng mã
                        result.push({
                        transactionCode: `Total (${codeObj.header.articleDescription})`,
                        articleDescription: "",
                        quantity: sum(mergedItems, "quantity"),
                        price: "",
                        amountBeforeTax: sum(mergedItems, "amountBeforeTax"),
                        amount: calculateTotalAmount(mergedItems, "price", "quantity"),
                        userName: "",
                        cssClass: "subtotal"
                         });
                });

                //  SubTotal theo nhóm con
                const subGroupItems = Object.values(codes).flatMap(code => code.details);
                result.push({
                    transactionCode: `Sub Total (${subGroupName})`,
                    articleDescription: "",
                    quantity: sum(subGroupItems, "quantity"),
                    price: "",
                    amountBeforeTax: sum(subGroupItems, "amountBeforeTax"),
                    amount: calculateTotalAmount(subGroupItems, "price", "quantity"),
                    userName: "",
                    cssClass: "subtotal"
                });
            });

            // Grand Total theo nhóm lớn
            const groupItems = Object.values(subGroups).flatMap(sub => Object.values(sub).flatMap(code => code.details));
            result.push({
                transactionCode: `Grand Total (${groupName})`,
                articleDescription: "",
                quantity: sum(groupItems, "quantity"),
                price: "",
                amountBeforeTax: sum(groupItems, "amountBeforeTax"),
                amount: calculateTotalAmount(groupItems, "price", "quantity"),
                userName: "",
                cssClass: "grandtotal"
            });
                
        });
        const allDetails = Object.values(grouped)
                 .flatMap(subGroups =>
                    Object.values(subGroups).flatMap(codes =>
                        Object.values(codes).flatMap(codeObj => codeObj.details)
                    )
                );

                result.push({
                transactionCode: `Grand Total `,
                articleDescription: "",
                quantity: sum(allDetails, "quantity"),
                price: "",
                amountBeforeTax: sum(allDetails, "amountBeforeTax"),
                amount: calculateTotalAmount(allDetails, "price", "quantity"),

                userName: "",
                cssClass: "grandtotal"
              });

        return result;
    }

    function initializeDataGrid(data) {
        $('#gridContainer').dxDataGrid({
           dataSource: data,         height: 500,
            allowColumnResizing: true,
            showBorders: true,
            rowAlternationEnabled: true,
            columns: [
                { dataField: "transactionCode", caption: "Code", width: 260 },
                { dataField: "articleDescription", caption: "Description", width: 300 },
                { dataField: "quantity", caption: "Qty.", width: 90 },
                { dataField: "price", caption: "Price", width: 150 },
                { dataField: "amountBeforeTax", caption: "Amount++", width: 120, format: "#,##0" },
                { dataField: "amount", caption: "Amount Net", width: 150, format: "#,##0" },
                { dataField: "userName", caption: "User", width: 100 }
            ],
            paging: {
                pageSize: 25
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, "all"],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            filterRow: { visible: true, applyFilter: "auto" },
            headerFilter: { visible: true },
                onRowPrepared: function (e) {
            if (e.rowType === "data") {
                const css = e.data?.cssClass;
                if (css === "group-header") {
                    e.rowElement.css({ 'font-weight': 'bold' });
                } else if (css === "subgroup-header") {
                    e.rowElement.css({ 'font-style': 'italic'});
                } else if (css === "code-header") {
                    e.rowElement.css({ 'padding-left': '20px', 'font-weight': 'bold' });
                } else if (css === "subtotal") {
                    e.rowElement.css({ 'font-weight': 'bold' });
                } else if (css === "grandtotal") {
                    e.rowElement.css({ 'font-weight': 'bold' });
                }
        }
    }


        });
    }

     $("#btnExportExcel").click(function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';
        var selectedReport = '@ViewBag.ReportTitle';
        if (!selectedReport) {
            alert("Vui lòng chọn báo cáo trước khi xuất Excel.");
            return;
        }

                     const workbook = new ExcelJS.Workbook();const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";
        const worksheet = workbook.addWorksheet("Sheet 1");

        // === Tạo header công ty (dòng 1) ===
       worksheet.addRow([companyName]);
        worksheet.mergeCells('A1:E1');
        worksheet.getRow(1).font = { bold: true };
        worksheet.getRow(1).alignment = { vertical: 'middle', horizontal: 'left' };

        // === Dòng 2: Thời gian xuất (phải) ===
        const now = new Date();
        const exportDate = now.toLocaleString("vi-VN");
        worksheet.addRow(['', '', '', '', ' ' + exportDate]);
        worksheet.mergeCells('E2:H2');
        worksheet.getRow(2).alignment = { vertical: 'middle', horizontal: 'right' };

        // === Dòng 3–4: Trống
        worksheet.addRow([]);
        worksheet.addRow([]);

        // === Dòng 5: Tên báo cáo ở giữa ===
        const reportRow = worksheet.addRow(['', '', selectedReport]);
        worksheet.mergeCells('C5:F5');
        reportRow.font = { bold: true, size: 14 };
        reportRow.alignment = { vertical: 'middle', horizontal: 'center' };

        // === Dòng 6: Trống trước khi xuất dữ liệu
        worksheet.addRow([]);

        // === Export dữ liệu từ DevExtreme (bắt đầu từ dòng 7)
        DevExpress.excelExporter.exportDataGrid({
            component: grid,
            worksheet: worksheet,
            autoFilterEnabled: true,
            topLeftCell: { row: 7, column: 1 } // dữ liệu bắt đầu từ dòng 7
        }).then(function () {
            // Footer
            const lastRow = worksheet.lastRow.number + 2;
  
            worksheet.mergeCells(`A${lastRow}:F${lastRow}`);
            worksheet.getCell(`A${lastRow}`).alignment = { horizontal: 'center' };
            worksheet.getCell(`A${lastRow}`).font = { italic: true };

            // Ghi file
            let fileName = selectedReport + ".xlsx";
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: "application/octet-stream" }), fileName);
            });
        });
    });


          $("#btnExportPdf").click(function () {
        const grid = $("#gridContainer").dxDataGrid("instance");

        // Lấy đối tượng jsPDF từ window
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF({ orientation: "landscape", unit: "pt", format: "A4" });

        const selectedReport = '@ViewBag.ReportTitle';
        const companyName = localStorage.getItem("CompanyName") || "Tên công ty chưa xác định";

        grid.getDataSource().load().then(data => {
            const columns = grid.getVisibleColumns();

            const head = [columns.map(col => col.caption)];
            const body = data.map(row =>
                columns.map(col =>
                    col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField]
                )
            );

            doc.setFontSize(14);
            doc.setFont("Helvetica", "bold");
            doc.text(companyName, doc.internal.pageSize.getWidth() / 2, 40, { align: "center" });

            doc.setFontSize(12);
            doc.setFont("Helvetica", "normal");
            doc.text(selectedReport, doc.internal.pageSize.getWidth() / 2, 60, { align: "center" });

            // AutoTable
            doc.autoTable({
                startY: 80,
                head: head,
                body: body,
                 styles: { fontSize: 9, cellPadding: 4 , lineWidth: 0.5, lineColor: [0, 0, 0]    },
                headStyles: { fillColor: [41, 128, 185], textColor: 255, fontStyle: 'bold' },
                alternateRowStyles: { fillColor: [240, 240, 240] },
                margin: { left: 20, right: 20 }
            });

            doc.save(selectedReport + ".pdf");
        });
    });


            $("#btnPrintGrid").on("click", function () {
               const grid = $("#gridContainer").dxDataGrid("instance"); var selectedReport2 = '@ViewBag.ReportTitle';

        // Lấy toàn bộ data từ dataSource
        grid.getDataSource().load().then(function (data) {
            // Tạo bảng HTML từ dữ liệu
            let tableHTML = '<table border="1" style="border-collapse: collapse; width: 100%;">';

            // Header
            const columns = grid.getVisibleColumns();
            tableHTML += "<thead><tr>";
            columns.forEach(col => {
                tableHTML += `<th style="padding: 5px; text-align: center;">${col.caption}</th>`;
            });
            tableHTML += "</tr></thead>";

            // Body
            tableHTML += "<tbody>";
            data.forEach(row => {
                tableHTML += "<tr>";
                columns.forEach(col => {
                    let value = col.calculateCellValue ? col.calculateCellValue(row) : row[col.dataField];
                    tableHTML += `<td style="padding: 5px;">${value ?? ""}</td>`;
                });
                tableHTML += "</tr>";
            });
            tableHTML += "</tbody></table>";

            // Mở cửa sổ in với nội dung bảng
            const printWindow = window.open('', '', 'height=800,width=1000');
            if (!printWindow) {
                alert("Trình duyệt đang chặn cửa sổ in.");
                return;
            }

           printWindow.document.write('<html><head><title>' + selectedReport2 + '</title>');
            printWindow.document.write('<style>table { font-family: Arial; font-size: 12px; }</style>');
            printWindow.document.write('</head><body>');
            printWindow.document.write(tableHTML);
            printWindow.document.write('</body></html>');
            printWindow.document.close();

            // Chờ nội dung render xong rồi in
            printWindow.onload = function () {
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            };
        });
    });
</script>
