<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        let day = date.getDate().toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        return `${year}-${month}-${day}`;
    }
        $("#arrivalDateChk").on("change", function () {
        if (this.checked) {
            // Bỏ tick Cancel Date
            $("#cancelDateChk").prop("checked", false);
            // Cập nhật label
            $("#fromDateLabel").text("From Arrival Date:");
            $("#toDateLabel").text("To Arrival Date:");
        } else {
            // Nếu bỏ tick, kiểm tra nếu Cancel cũng không tick → trở lại mặc định
            if (!$("#cancelDateChk").is(":checked")) {
                $("#fromDateLabel").text("From Date:");
                $("#toDateLabel").text("To Date:");
            }
        }
    });

    $("#cancelDateChk").on("change", function () {
        if (this.checked) {
            // Bỏ tick Arrival Date
            $("#arrivalDateChk").prop("checked", false);
            // Cập nhật label
            $("#fromDateLabel").text("From Cancel Date:");
            $("#toDateLabel").text("To Cancel Date:");
        } else {
            // Nếu bỏ tick, kiểm tra nếu Arrival cũng không tick → trở lại mặc định
            if (!$("#arrivalDateChk").is(":checked")) {
                $("#fromDateLabel").text("From Date:");
                $("#toDateLabel").text("To Date:");
            }
        }
    });


    $(document).ready(function () {
         document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        const today = new Date();

        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
        // Lấy ngày cuối cùng của tháng
        const lastDayOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);

        // Định dạng theo local time
        const formattedFirstDay = formatDate(firstDayOfMonth);
        const formattedLastDay = formatDate(lastDayOfMonth);

        console.log(formattedFirstDay); // Kiểm tra giá trị đúng chưa
        console.log(formattedLastDay); // Kiểm tra giá trị đúng chưa
        // Gán giá trị cho input date
        document.getElementById('fromDate').value = formattedFirstDay;
        document.getElementById('toDate').value = formattedLastDay;



    });
    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        $("#loadingSpinner").show();
            let typeDate = $("input[name='includeOptions']:checked").attr("id") === "arrivalDateChk" ? 0 : 1;
        $.ajax({
            url: '/Report/ReservationCancellationsReport',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                 toDate: $("#toDate").val(),
                  commnet: $("#commnet").val(),
                    typeDate: typeDate
            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
                success: function (result) {
        drawMonthlyGrandTotal(result);
        $("#loadingSpinner").hide();    
    },

            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });

            function drawMonthlyGrandTotal(data){
        const useCancelDate = $("#cancelDateChk").is(":checked");
        const dateField = useCancelDate ? "cancellationDate" : "arrivalDate";

        const grouped = {};

        // Gom nhóm số phòng theo tháng
        data.forEach(item => {
            const date = new Date(item[dateField]);
            if (isNaN(date)) return;

            const key = `${date.getFullYear()}-${(date.getMonth() + 1).toString().padStart(2, '0')}`;
            const val = Number(item.noOfRoom) || 0;
            grouped[key] = (grouped[key] || 0) + val;
        });

        // ✅ Tạo danh sách đầy đủ tháng từ fromDate đến toDate
        const fromDate = new Date($("#fromDate").val());
        const toDate = new Date($("#toDate").val());
        fromDate.setDate(1);
        toDate.setDate(1);

        const months = [];
        for (let d = new Date(fromDate); d <= toDate; d.setMonth(d.getMonth() + 1)) {
            months.push(`${d.getFullYear()}-${(d.getMonth() + 1).toString().padStart(2, '0')}`);
        }

        const values = months.map(m => grouped[m] ?? 0);

        Highcharts.chart('monthlyBar', {
            chart: { type: 'column' },
            title: { text: 'Rooms by Month' },
            xAxis: {
                categories: months,
                title: { text: 'Month' }
            },
            yAxis: {
                min: 0,
                title: { text: 'Count' }
            },
            tooltip: {
                pointFormat: '<b>{point.y}</b> room(s)'
            },
            series: [{
                name: 'No. of Rooms',
                data: values,
                color: '#3b9ac6'
            }]
        });
    }

</script>