        function prepareDepartureReportsData(data) {
        const groupedData = {};
        const finalData = [];

        // Gom nhóm theo arrivalDate
        data.forEach(item => {
            const key = item.departureDate || "";
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        // Sắp xếp key theo thứ tự ngày tăng dần
        const sortedKeys = Object.keys(groupedData).sort((a, b) => {
            // Chuyển string về Date để so sánh
            const dateA = new Date(a);
            const dateB = new Date(b);
            return dateA - dateB;
        });

        // Duyệt theo key đã sắp xếp
        sortedKeys.forEach(departureDate => {
            const records = groupedData[departureDate];
            const formattedDate = new Date(departureDate).toLocaleDateString('vi-VN');
            // Thêm dòng tiêu đề nhóm
             finalData.push({
                roomNo: `Departure`, 
                 name: formattedDate,
                isTitle: true,
                cssClass: "custom"
            });
            // Thêm các dòng chi tiết
            finalData.push(...records);

            const totalRow = {
                vIP: "Sub total",  // Đặt tên hiển thị

        noOfAdult: sum(records, 'noOfAdult'),
        noOfChild: sum(records, 'noOfChild'),
        noOfChild1: sum(records, 'noOfChild1'),
        noOfChild2: sum(records, 'noOfChild2'),
        prs: sum(records, 'prs'),
             noOfRoom: sum(records, 'noOfRoom'),
               cssClass: "custom",
        isTotal: true // Cờ dòng tổng
            };

            finalData.push(totalRow);
        });

        return finalData;
    }
             function sum(arr, field) {
        return arr.reduce((total, item) => {
            const value = parseFloat(item[field]);
            return total + (isNaN(value) ? 0 : value);
        }, 0);
    }




