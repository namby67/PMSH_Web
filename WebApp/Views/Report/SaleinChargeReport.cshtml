      function preparSalesinChargeReportsForm1Data(data) {
        const groupedData = {};

        // Group theo zone
        data.forEach(item => {
            const key = item.zone;
            if (!key) return; // Bỏ qua nếu không có zone
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([zone, records]) => {
            console.log(`Zone: ${zone} | Records: ${records.length}`);

            // Dòng tiêu đề
            const titleRow = {
                saleInCharge: `S.In Charge : ${zone}`,
                isTitle: true,
                cssClass: "custom"
            };
            finalData.push(titleRow);

            // Thêm các dòng dữ liệu gốc
            finalData.push(...records);

            // Dòng tổng
            const totalRow = {
                saleInCharge: "TOTAL",
                saleInChargeGroup: zone,
                t1: sum(records, 't1'),
                t2: sum(records, 't2'),
                t3: sum(records, 't3'),
                t4: sum(records, 't4'),
                t5: sum(records, 't5'),
                t6: sum(records, 't6'),
                t7: sum(records, 't7'),
                t8: sum(records, 't8'),
                t9: sum(records, 't9'),
                t10: sum(records, 't10'),
                t11: sum(records, 't11'),
                t12: sum(records, 't12'),
                q1: sum(records, 'q1'),
                q2: sum(records, 'q2'),
                q3: sum(records, 'q3'),
                q4: sum(records, 'q4'),
                total: sum(records, 'total'),
                cssClass: "custom",
                isTotal: true
            };
            finalData.push(totalRow);
        });

        return finalData;
    }

    function sum(arr, field) {
        return arr
            .filter(item => !item.isTitle && !item.isTotal) // Không tính dòng tiêu đề và tổng
            .reduce((total, item) => total + (parseFloat(item[field]) || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null && !x.isTitle && !x.isTotal);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + parseFloat(x[field] || 0), 0) / valid.length;
    }

