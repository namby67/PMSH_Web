                    FOStatus: $("#foStatus").val(),   // bạn cần thêm id="foStatus" cho select FO Status
                    IsGroupByRoomClass: $("#arrival").is(":checked") ? 1 : 0
            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
            success: function (result) {
                // $("#reportViewerContainer").html(result);
                // $("#loadingSpinner").hide();
