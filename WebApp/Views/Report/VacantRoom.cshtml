     function initializeTomSelects() {
        const selectors = ["#roomtype","#roomClass"];

        for (const id of selectors) {
            const el = document.querySelector(id);
            if (!el) continue;

            // Nếu đã khởi tạo rồi thì destroy
            if (el.tomselect) el.tomselect.destroy();

            const ts = new TomSelect(el, {
                plugins: ['remove_button'],
                create: false,
                maxItems: null,
                allowEmptyOption: true,
                placeholder: '',
                persist: false,
                render: {
                    option: function (data, escape) {
                        return `<div>${escape(data.text)}</div>`;
                    }
                }
            });

        }
    }
    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
            const orderBy = $("#sortOrder").val(); // dùng chung id nên cần đổi lại nếu có 3 dropdown trùng id

    // Xác định thứ tự sắp xếp
    let orderByRoomNo = 0, orderByHKPStatus = 0, orderByFOStatus = 0;
    if (orderBy === "roomnoby") orderByRoomNo = 1;
    if (orderBy === "hkpstatusby") orderByHKPStatus = 1;
    if (orderBy === "fostatusby") orderByFOStatus = 1;
        $("#loadingSpinner").show();
