    function initializVacantRoomGrid(data) {
        const columnWidth = 180;
        $("#gridContainer").dxDataGrid({
    dataSource: data,         height: 500, allowColumnResizing: true,
            allowColumnResizing: true,
          columnResizingMode: "widget",
            columns: [
               { dataField: "roomNo", caption: "Room Number", width: columnWidth-50},
            { dataField: "code", caption: "Room Type", width: columnWidth-60},
                        { dataField: "foStatus", caption: "FOStatus", width: columnWidth-60 },
                         { dataField: "status", caption: "Status", width: columnWidth-60 },
                                 { dataField: "name", caption: "Name", width: columnWidth-60 },
            { dataField: "arrDate", caption: "Arr.Date", width: columnWidth-60,  dataType: "date", format: "dd/MM/yyyy"},
            { dataField: "depDate", caption: "Dep.Date",width: columnWidth-60,  dataType: "date", format: "dd/MM/yyyy"},
               { dataField: "resvStatus", caption: "Resv.Status", width: columnWidth-50 },


            { dataField: "adl", caption: "Adlts",width: columnWidth-80 ,dataType: "number", format: "#,##0" },
            { dataField: "chld", caption: "Chld", width: columnWidth-80 ,dataType: "number", format: "#,##0" },

             { dataField: "nextBlock", caption: "NextBlock", width: columnWidth-50},
            ],
            paging: { pageSize: 25 },
      scrolling:  {
         
        useNative: true,
       showScrollbar: "always"
    },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
                filterRow: {
         visible: true,
        applyFilter: "auto"
    },
    headerFilter: {
        visible: true
        },summary: {
        totalItems: [
             {column: "resvStatus", summaryType: "custom",displayFormat: "Grand Total"},

            {
                column: "adl",
                summaryType: "sum",
                displayFormat: "{0}",
                valueFormat: "#,##0"
            },
            {
                column: "chld",
                summaryType: "sum",
                displayFormat: "{0}",
                valueFormat: "#,##0"
            }
        ]
    },

            showBorders: true,
                            onRowPrepared: function (e) {
        if (e.rowType === "data" && e.data?.cssClass) {
            e.rowElement.addClass(e.data.cssClass);
        }
    }

