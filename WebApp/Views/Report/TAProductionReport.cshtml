            { dataField: "rsvPersonInCharge", caption: "P.In Charge", width: columnWidth-70},
            ],
            paging: { pageSize: 25 },
      scrolling:  {
         
        useNative: true,
       showScrollbar: "always"
    },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },       summary: {
            totalItems: [
                {
                    column: "guestNo",
                    summaryType: "custom",
                    displayFormat: "Total"
                },
                 { column: "roomSales", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                { column: "roomNight", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },

            ]
