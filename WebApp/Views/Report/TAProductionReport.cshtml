<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        let day = date.getDate().toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        return `${year}-${month}-${day}`;
    }

    $(document).ready(function () {
            $("#confirmation, #masterllio").on("change", function () {
            if (this.checked) {
                $("#confirmation, #masterllio").not(this).prop("checked", false);
            }
        });

        // Nhóm "Sorting"
        $("#ascending, #descending").on("change", function () {
            if (this.checked) {
                $("#ascending, #descending").not(this).prop("checked", false);
            }
        });

         document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        const today = new Date();

        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
        // Lấy ngày cuối cùng của tháng
        const lastDayOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);

        // Định dạng theo local time
        const formattedFirstDay = formatDate(firstDayOfMonth);
        const formattedLastDay = formatDate(lastDayOfMonth);

        console.log(formattedFirstDay); // Kiểm tra giá trị đúng chưa
        console.log(formattedLastDay); // Kiểm tra giá trị đúng chưa
        // Gán giá trị cho input date
        document.getElementById('fromDate').value = formattedFirstDay;
        document.getElementById('toDate').value = formattedLastDay;



    });

     $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        $("#loadingSpinner").show();

        const sortFieldIndex = parseInt($("#sortOrder").val());
        const isDescending = $("#descending").is(":checked");
        const isAscending = $("#ascending").is(":checked");
        const sortDirection = isDescending ? "desc" : (isAscending ? "asc" : null);

        const masterllio = $("#masterllio").is(":checked");

        const statusValues = $("input[name='includeOptions']:checked")
            .map(function () {
                const val = $(this).val();         // ví dụ: "1,101"
                const parts = val.split(',');      // ["1", "101"]
                if (masterllio) {
                    return parts.find(p => p.length === 3); // lấy mã 3 chữ số
                } else {
                    return parts.find(p => p.length === 1); // lấy mã 1 chữ số
                }
            })
            .get()
            .join(',');

        $.ajax({
            url: '/Report/TAProductionReportData',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                toDate: $("#toDate").val(),
                type: statusValues,
                currency: $("#viewBy").val()
            },
            traditional: true,
            crossDomain: false,
            headers: {
                "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val()
            },
            success: function (result) {
                // 1. Lọc theo RoomNight
                const roomNightFilter = parseInt($("#roomNight").val());
                const filteredResult = isNaN(roomNightFilter)
                    ? result
                    : result.filter(item => (item.roomNight || 0) >= roomNightFilter);

                // 2. Sắp xếp dữ liệu
                const sortFieldMap = {
                    2: "guestName",         // Account Name
                    8: "roomNight",         // Room Night
                    9: "rsvPersonInCharge"  // Person In Charge
                };
                const sortField = sortFieldMap[sortFieldIndex];

                if (sortField && sortDirection) {
                    filteredResult.sort((a, b) => {
                        const aVal = a[sortField] ?? "";
                        const bVal = b[sortField] ?? "";

                        if (typeof aVal === "string") {
                            return sortDirection === "asc"
                                ? aVal.localeCompare(bVal)
                                : bVal.localeCompare(aVal);
                        } else {
                            return sortDirection === "asc"
                                ? aVal - bVal
                                : bVal - aVal;
                        }
                    });
                }

                // 3. Đưa lên lưới
                initializProductActivityGrid(filteredResult);
                $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });



