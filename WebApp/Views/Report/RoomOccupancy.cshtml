            success: function (result) {
                // $("#reportViewerContainer").html(result);
                // $("#loadingSpinner").hide();
                     console.log(result);
    const processedData = prepareRoomOccupancyData(result);
    initializeRoomOccupancyGrid(processedData);

                    $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });
    function prepareRoomOccupancyData(data) {
        const groupedData = {};

        // Group by MonthDisplay
        data.forEach(item => {
            const key = item.monthDisplay;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([month, records]) => {
            finalData.push(...records);

            const totalRow = {
                fair: records[0].monthDisplay,
                dow: null,
                date: null,
                monthDisplay: month,
                vacRo: sum(records, 'vacRo'),
                resRo: sum(records, 'resRo'),
                nonDeductRo: sum(records, 'nonDeductRo'),
                altRo: sum(records, 'altRo'),
                totaRo1: sum(records, 'totaRo1'),
                aRo: sum(records, 'aRo'),
                depRo: sum(records, 'depRo'),
                ooo: sum(records, 'ooo'),
                totaRo2: sum(records, 'totaRo2'),
                pt: average(records, 'pt'),
                cssClass: "custom",
                isTotal: true // Để phân biệt dòng tổng
            };

            finalData.push(totalRow);
        });

        return finalData;
    }

    // Helper functions
    function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }

