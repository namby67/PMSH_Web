<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        let day = date.getDate().toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        return `${year}-${month}-${day}`;
    }

    $(document).ready(function () {
         DevExpress.localization.locale("vi");
         document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
        const today = new Date();

        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);
        // Lấy ngày cuối cùng của tháng
        const lastDayOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);

        // Định dạng theo local time
        const formattedFirstDay = formatDate(firstDayOfMonth);
        const formattedLastDay = formatDate(lastDayOfMonth);

        console.log(formattedFirstDay); // Kiểm tra giá trị đúng chưa
        console.log(formattedLastDay); 
        // Gán giá trị cho input date
        document.getElementById('fromDate').value = formattedFirstDay;
        document.getElementById('toDate').value = formattedLastDay;
        initializeTomSelects();
    });
    function initializeTomSelects() {
        const selectors = ["#roomType", "#zone"];

        for (const id of selectors) {
            const el = document.querySelector(id);
            if (!el) continue;

            // Nếu đã khởi tạo rồi thì destroy
            if (el.tomselect) el.tomselect.destroy();

            const ts = new TomSelect(el, {
                plugins: ['remove_button'],
                create: false,
                maxItems: null,
                allowEmptyOption: true,
                placeholder: '',
                persist: false,
                render: {
                    option: function (data, escape) {
                        return `<div>${escape(data.text)}</div>`;
                    }
                }
            });

        }
    }
    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
         let selectedZones = $("#zone").val();
            let zoneParam = "";

            if (!selectedZones || selectedZones.length === 0) {
                // Nếu không chọn zone nào => tự động lấy toàn bộ zone từ select
                selectedZones = [];
                $("#zone option").each(function () {
                    selectedZones.push($(this).val());
                });
            }
            zoneParam = selectedZones.map(r => r.replace("''")).join("','");
        $("#loadingSpinner").show();
        $.ajax({
            url: '/Report/ReveunueByData',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                toDate: $("#toDate").val(),
                reservation: $("#reservation").val(),
                roomType: $("#roomType").val().map(r => r.replace( "''")).join("','") + "",
                zone: zoneParam,
                viewBy: $("#viewBy").val(),
                sortOrder: $("#sortOrder").val(),
            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
            success: function (result) {
                // $("#reportViewerContainer").html(result);
                // $("#loadingSpinner").hide();
                     console.log(result);
                initializReveunueByGrid(result);
                    $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });

    function initializReveunueByGrid(data) {
        const columnWidth = 180;
        $("#gridContainer").dxDataGrid({

    dataSource: data,     height: 500, allowColumnResizing: true,
            columns: [
            { dataField: "folioID", caption: "Folio No", width: columnWidth-90 },
            { dataField: "confirmationNo", caption: "Conf.No", width: columnWidth-90,dataType: "number" },
            { dataField: "guestName", caption: "Name", width: columnWidth - 10  },
            { dataField: "reservationHolder", caption: "Resv.Holder", width: columnWidth - 10},
            { dataField: "roomRevenue", caption: "Room Revenue", width: columnWidth-40, dataType: "number", format: "#,##0" },
            { dataField: "fbRevenue", caption: "F&BRevenue", width: columnWidth-40 , dataType: "number", format: "#,##0"},
            { dataField: "otherRevenue", caption: "Other Revenue", width: columnWidth-40, dataType: "number", format: "#,##0" },
            { dataField: "totalRevenue", caption: "Total Revenue", width:columnWidth-40, dataType: "number", format: "#,##0" },
            { dataField: "currency", caption: "Curr.", width: columnWidth-110 },
            { dataField: "arrivalDate", caption: "Arr.Date", width: columnWidth-85,dataType: "date",format: "dd/MM/yyyy" },
            { dataField: "departureDate", caption: "Dep.Date", width: columnWidth-85,dataType: "date",format: "dd/MM/yyyy" },
            { dataField: "status", caption: "Status", width:columnWidth-70 }
            ],
            paging: { pageSize: 25 },
            scrolling:  {       
            useNative: true,
            showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
                filterRow: {
            visible: true,
            applyFilter: "auto"
            },
            headerFilter: {
            visible: true
            },
            showBorders: true,
                 summary: {
                totalItems: [
                        {
            column: "reservationHolder",
            summaryType: "custom",
            displayFormat: "Grand Total:"
            },
                        { column: "roomRevenue", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "fbRevenue", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "otherRevenue", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "totalRevenue", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                      
                ]
