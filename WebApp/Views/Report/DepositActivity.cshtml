          function prepareDepositActivityData(data) {
        const groupedData = {};

        // Nhóm dữ liệu theo rsvID
        data.forEach(item => {
            const key = item.rsvID || "UNKNOWN";
            if (!groupedData[key]) {
                groupedData[key] = [];
            }
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([rsvID, records]) => {
            // 👉 Sắp xếp theo thứ tự: aRequest → bPayment → cUnallocated
            const sortedRecords = records.sort((a, b) => {
                const order = { aRequest: 1, bPayment: 2, cUnallocated: 3 };
                return (order[a.type] || 99) - (order[b.type] || 99);
            });

            // Gán cssClass và thêm vào finalData
            sortedRecords.forEach(item => {
                switch (item.type) {
                    case "aRequest":
                        item.cssClass = "row-request";
                        break;
                    case "bPayment":
                        item.cssClass = "row-payment";
                        break;
                    case "cUnallocated":
                        item.cssClass = "row-unallocated";
                        break;
                }

                finalData.push(item);
            });
        });

        return finalData;
    }




     function sum(arr, field) {
