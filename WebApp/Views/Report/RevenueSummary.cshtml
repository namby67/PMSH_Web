                  function preparRevenueSummaryData(data) {
        const groupedData = {};
        const finalData = [];

        let grandTotalVND = 0;
        let grandTotalUSD = 0;

        // Nhóm dữ liệu theo groupCode
        data.forEach(item => {
            const key = item.groupCode;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        Object.entries(groupedData).forEach(([groupCode, records]) => {
            // Tổng từng nhóm
            const totalVND = sum(records, 'totalVND');
            const totalUSD = sum(records, 'totalUSD');

            finalData.push({
                subGroupDescription: `${groupCode}`,
                isTitle: true,
                cssClass: "custom"
            });

            finalData.push(...records);

            const totalRow = {
                subGroupDescription: "SUB TOTAL",
                totalVND: totalVND,
                totalUSD: totalUSD,
                isTotal: true,
                cssClass: "custom"
            };
            finalData.push(totalRow);

            // Cộng vào Grand Total
            grandTotalVND += totalVND;
            grandTotalUSD += totalUSD;
        });

        return {
            data: finalData,
            grandTotalVND,
            grandTotalUSD
        };
    }


         function sum(arr, field) {
            return arr.reduce((total, item) => total + (item[field] || 0), 0);
        }

        function average(arr, field) {
            const valid = arr.filter(x => x[field] != null);
            if (valid.length === 0) return 0;
            return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
        }
     function initializeRevenueSummaryGrid(data, grandTotalVND, grandTotalUSD) {
        const columnWidth = 300;

        $("#gridContainer").dxDataGrid({
           dataSource: data,         height: 500,
            allowColumnResizing: true,
            columns: [
                { dataField: "subGroupDescription", caption: "", width: columnWidth },
                { dataField: "totalVND", caption: "VND", width: columnWidth, dataType: "number", format: "#,##0" },
                { dataField: "totalUSD", caption: "USD", width: columnWidth, dataType: "number", format: "#,##0" },
            ],
            summary: {
                totalItems: [
                    {
                        column: "subGroupDescription",
                        summaryType: "custom",
                        displayFormat: "Grand Total"
                    },
                    {
                        column: "totalVND",
                        summaryType: "custom",
                        name: "grandVND",
                        customizeText: function () {
                            return Math.round(grandTotalVND).toLocaleString('vi-VN', {
                                minimumFractionDigits: 0,
                                maximumFractionDigits: 0
                            });
                        }
                    },
                    {
                        column: "totalUSD",
                        summaryType: "custom",
                        name: "grandUSD",
                        customizeText: function () {
                            return Math.round(grandTotalUSD).toLocaleString('vi-VN', {
                                minimumFractionDigits: 0,
                                maximumFractionDigits: 0
                            });
                        }
                    }
                ]
            },
            showBorders: true,
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
            onRowPrepared: function (e) {
                if (e.rowType === "data" && e.data?.cssClass) {
                    e.rowElement.addClass(e.data.cssClass);
                }
            }
        });
    }




