                    <div class="form-check me-2 mb-0">
                        <input class="form-check-input include-option" type="checkbox" id="viponlycheck" name="viponlycheck">
                        <label class="form-check-label" for="viponlycheck">Vip Only</label>
                    </div>
                    <select id="vip" name="vip" class="form-control form-control-sm w-auto" style="width: 100px; display: none;">
                        @foreach (var item in vipList)
                        {
                            <option value="@item.Code">@item.Description</option>
                        }
                    </select>
                </div>

