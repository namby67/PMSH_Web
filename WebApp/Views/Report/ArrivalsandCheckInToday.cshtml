            <label class="me-2 mb-0">Room Type:</label>
            <select id="roomtype" name="roomtype" class="tomselect-custom" style="width: 80px;" multiple>
                @foreach (var item in rtList)
                {
                    <option value="@item.Code">@item.Code</option>
                }
            </select>
        </div>

        <!-- Pay Method -->
        <div class="d-flex align-items-center me-3">
            <label class="me-2 mb-0 ">Pay Method:</label>
            <select id="paymethod" name="paymethod" class="tomselect-custom" multiple>
