                  function preparGuestMarketData(data) {
        const groupedData = {};
        const finalData = [];

        // Tổng toàn bộ (chỉ tính các record, không tính title/total dòng nhóm)
        const grandTotal = {
            d_Persons: 0, d_Room: 0, _D_Occ: 0, d_Accom: 0, d_TotalAccom: 0,
            m_Persons: 0, m_Room: 0, _M_Occ: 0, m_Accom: 0, m_TotalAccom: 0,
            y_Persons: 0, y_Room: 0, _Y_Occ: 0, y_Accom: 0, y_TotalAccom: 0
        };

        data.forEach(item => {
            const key = item.marketType;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);

            // Cộng luôn Grand Total (chỉ cộng dữ liệu thực tế)
            grandTotal.d_Persons += item.d_Persons || 0;
            grandTotal.d_Room += item.d_Room || 0;
            grandTotal._D_Occ += item._D_Occ || 0;
            grandTotal.d_Accom += item.d_Accom || 0;
            grandTotal.d_TotalAccom += item.d_TotalAccom || 0;

            grandTotal.m_Persons += item.m_Persons || 0;
            grandTotal.m_Room += item.m_Room || 0;
            grandTotal._M_Occ += item._M_Occ || 0;
            grandTotal.m_Accom += item.m_Accom || 0;
            grandTotal.m_TotalAccom += item.m_TotalAccom || 0;

            grandTotal.y_Persons += item.y_Persons || 0;
            grandTotal.y_Room += item.y_Room || 0;
            grandTotal._Y_Occ += item._Y_Occ || 0;
            grandTotal.y_Accom += item.y_Accom || 0;
            grandTotal.y_TotalAccom += item.y_TotalAccom || 0;
        });

        Object.entries(groupedData).forEach(([marketType, records]) => {
            finalData.push({
                code: `${marketType}`,
                isTitle: true,
                cssClass: "custom"
            });

            finalData.push(...records);

            finalData.push({
                code: "TOTAL",
                description: records[0].description,
                d_Persons: sum(records, 'd_Persons'),
                d_Room: sum(records, 'd_Room'),
                _D_Occ: sum(records, '_D_Occ'),
                d_Accom: sum(records, 'd_Accom'),
                d_TotalAccom: sum(records, 'd_TotalAccom'),

                m_Persons: sum(records, 'm_Persons'),
                m_Room: sum(records, 'm_Room'),
                _M_Occ: sum(records, '_M_Occ'),
                m_Accom: sum(records, 'm_Accom'),
                m_TotalAccom: sum(records, 'm_TotalAccom'),

                y_Persons: sum(records, 'y_Persons'),
                y_Room: sum(records, 'y_Room'),
                _Y_Occ: sum(records, '_Y_Occ'),
                y_Accom: sum(records, 'y_Accom'),
                y_TotalAccom: sum(records, 'y_TotalAccom'),

                isTotal: true,
                cssClass: "custom"
            });
        });

        return { data: finalData, grandTotal };
    }


         function sum(arr, field) {
            return arr.reduce((total, item) => total + (item[field] || 0), 0);
        }

        function average(arr, field) {
            const valid = arr.filter(x => x[field] != null);
            if (valid.length === 0) return 0;
            return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
        }
