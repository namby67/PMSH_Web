    });

    function initializeDepartureExtendedGrid(data) {
        const columnWidth = 180;
        $("#gridContainer").dxDataGrid({
    dataSource: data,         height: 500, allowColumnResizing: true,
            columns: [
               { dataField: "roomNo", caption: "RoomNo", width: columnWidth -80},
            { dataField: "name", caption: "Name", width: columnWidth  },
            { dataField: "arrivalDate", caption: "Arr.Date", width: columnWidth-70 , dataType: "date", format: "dd/MM/yyyy" },
            { dataField: "originalDepDate", caption: "Ori.DepDate",  width: columnWidth-70 , dataType: "date", format: "dd/MM/yyyy" },
            { dataField: "departureDate", caption: "Dep.Date", width: columnWidth-70 , dataType: "date", format: "dd/MM/yyyy" },
            { dataField: "nts", caption: "Nts",  width: columnWidth-80, dataType: "number", format: "#,##0" },
             { dataField: "cur", caption: "Cur",  width: columnWidth-80 , dataType: "number", format: "#,##0" },
              { dataField: "prs", caption: "Prs",  width: columnWidth-80 , dataType: "number", format: "#,##0" },
               { dataField: "rms", caption: "Rms",  width: columnWidth-80 , dataType: "number", format: "#,##0" },
                { dataField: "balance", caption: "Balance",  width: columnWidth-70, dataType: "number", format: "#,##0" },
                 { dataField: "resvHolder", caption: "Resv.Holder",  width: columnWidth },
                  { dataField: "resvStatus", caption: "Resv.Status",  width: columnWidth-30 },
                        { dataField: "departureTime", caption: "Dep.Time",  width: columnWidth-80, dataType: "date", format: "dd/MM/yyyy" },
            ],
            paging: { pageSize: 25 },
            scrolling:  {
                 
                  useNative: true,
                 showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },
             filterRow: {
               visible: true,
               applyFilter: "auto"
             },
             headerFilter: {
                  visible: true
              },
            selection: { mode: "multiple", showCheckBoxesMode: "none" },
            showBorders: true,
                 summary: {
                totalItems: [
                        {
        column: "roomNo",
        summaryType: "custom",
        displayFormat: "Total"
    },
                        { column: "nts", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "cur", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "prs", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
                        { column: "rms", summaryType: "sum", displayFormat: "{0}", valueFormat: "#,##0" },
