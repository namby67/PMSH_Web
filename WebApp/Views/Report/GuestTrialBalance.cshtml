            function initializeTomSelects() {
        const selectors = ["#roomClass", "#roomTypeId"];

        for (const id of selectors) {
            const el = document.querySelector(id);
            if (!el) continue;

            // Nếu đã khởi tạo rồi thì destroy
            if (el.tomselect) el.tomselect.destroy();

            const ts = new TomSelect(el, {
                plugins: ['remove_button'],
                create: false,
                maxItems: null,
                allowEmptyOption: true,
                placeholder: '',
                persist: false,
                render: {
                    option: function (data, escape) {
                        return `<div>${escape(data.text)}</div>`;
                    }
                }
            });

        }
    }


    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        $("#loadingSpinner").show();
        $.ajax({
            url: '/Report/GuestTrialBalance',
            type: 'GET',
            data: {
                date: $("#date").val(),
                roomClass: ($("#roomClass").val() || []).join(','),
                roomTypeId: ($("#roomTypeId").val() || []).join(','),
                isCheckOut: $("#isCheckOut").is(":checked") ? 1 : 0,
                isRouting: $("#isRouting").is(":checked") ? 1 : 0

            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
                success: function (result) {
                console.log("Result from server:", result);
                const prepared = prepareReservationData(result);
                initializReveunueByGrid(prepared);     
                $("#loadingSpinner").hide();
            },

                    error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });
        function toggleRoomSelectors() {
        const isAllRooms = $("#isRouting").is(":checked");   // true = ALL
        $("#roomClass").prop("disabled", isAllRooms);        // khóa/mở Room Class
        $("#roomTypeId").prop("disabled", isAllRooms);       // khóa/mở Room Type
        // Nếu dùng TomSelect: cũng disable instance để không bấm được
        for (const id of ["#roomClass", "#roomTypeId"]) {
            const ts = $(id)[0].tomselect;
            if (ts) ts.disable();        // luôn disable trước
            if (!isAllRooms && ts) ts.enable();   // mở lại nếu cần
        }
    }

            function prepareReservationData(data) {
        const grouped = {};
        const result = [];

        // Nhóm dữ liệu theo reservation
        data.forEach(item => {
            const reservation = item.reservation || "Unknown Reservation";
            if (!grouped[reservation]) grouped[reservation] = [];
            grouped[reservation].push(item);
        });

        // Duyệt từng nhóm reservation
        Object.entries(grouped).forEach(([reservation, items]) => {
            // Header nhóm reservation
            result.push({
                isGroupHeader: true,
                folioID: reservation,
                cssClass: "bold group-header"
            });

            // Dòng dữ liệu chi tiết
            result.push(...items.map(x => ({
                ...x,
                isGroupHeader: false,
                isSubtotal: false,
                isGrandTotal: false
            })));

            // Tính subtotal
            result.push({
                isSubtotal: true,
                departureDate:"Total",
                debit: sum(items, "debit"),
                credit: sum(items, "credit"),
                openBalance: sum(items, "openBalance"),
                closeBalance: sum(items, "closeBalance"),
                debitTranfer: sum(items, "debitTranfer"),
                creditTranfer: sum(items, "creditTranfer"),
                currency:"VND",
                cssClass: "bold group-total"
            });
        });

        // Grand Total
        result.push({
            isGrandTotal: true,          
            departureDate:"Grand Total",
            debit: sum(data, "debit"),
            credit: sum(data, "credit"),
            openBalance: sum(data, "openBalance"),
            closeBalance: sum(data, "closeBalance"),
            debitTranfer: sum(data, "debitTranfer"),
            creditTranfer: sum(data, "creditTranfer"),
            currency:"VND",
            cssClass: "bold grandtotal"
        });

        return result;
    }

    function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }



