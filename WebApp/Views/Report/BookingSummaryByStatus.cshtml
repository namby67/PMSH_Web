    <div class="">
        <button style="border-radius: 4px;  margin-right: 6px;background-color: #3b9ac6;" id="btnPrint" class="mui-button mui-button-new"><i class="fa-solid fa-eye"></i>View</button>
    </div>
</div>

<div class="mui-card">
    @*     <div style="font-size: 20px;" class="mt-1" id="reportTitle"></div> *@
    <div class="dx-viewport demo-container mt-3 chart-container">
        <div id="pie" style="height: 540px;"></div>
        <canvas id="statusPieChart" class="chart-fixed-size"></canvas>
        <div id="barChartDevExtreme" style="height: 540px; display:none;"></div>

        <!-- Biểu đồ cột Chart.js -->
        <canvas id="barChartChartJS" class="chart-fixed-sizeChartJS" style="display:none;"></canvas>

        <div id="highchartPie" class="chart-fixed-sizehigh" style="display:none;"></div>
        <div id="highchartBar" class="chart-fixed-sizehigh" style="display:none;"></div>
    </div>
</div>
<div id="loadingSpinner" style="display:none; position:fixed; top:50%; left:50%; transform:translate(-50%, -50%); z-index:1000;">
    <i class="fa-solid fa-spinner fa-spin"></i>
</div>
<script>
    function formatDate(date) {
        let year = date.getFullYear();
        let month = (date.getMonth() + 1).toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        let day = date.getDate().toString().padStart(2, '0'); // Đảm bảo có 2 chữ số
        return `${year}-${month}-${day}`;
    }

    $(document).ready(function () {
         document.getElementById("reportTitle").innerText = '@ViewBag.ReportTitle';
           var parsedBusinessDate = JSON.parse(localStorage.getItem("businessDate")); // "29/08/2024 00:00:00"

            var dateOnly = parsedBusinessDate.split(' ')[0]; // "29/08/2024"
            var dateParts = dateOnly.split('/'); // ["29", "08", "2024"]

            var businessDate =  new Date(dateParts[2], dateParts[0] - 1, dateParts[1]);// new Date(2024, 7, 29)
           var parsedBusinessDate =  formatDate(businessDate);
                       document.getElementById('fromDate').value = parsedBusinessDate;
                    document.getElementById('toDate').value = parsedBusinessDate;



    });
    $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        $("#loadingSpinner").show();
        $.ajax({
            url: '/Report/BookingSummaryByStatusData',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                          toDate: $("#toDate").val(),
            },
            traditional: true,
              crossDomain: false,
                headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
                success: function (result) {
                        console.log(result);
                const selectedStyle = $("#chartStyle").val();

                    $("#pie").hide();
                    $("#statusPieChart").hide();
                    $("#barChartDevExtreme").hide();
                    $("#barChartChartJS").hide();
                    $("#highchartPie").hide();
                    $("#highchartBar").hide();

                    // Hiển thị biểu đồ phù hợp
                    if (selectedStyle === "devextreme") {
                        $("#pie").show();
                        renderStatusPieChartDevExtreme(result);
                    } else if (selectedStyle === "chartjs") {
                        $("#statusPieChart").show();
                        renderStatusPieChart(result);
                    } else if (selectedStyle === "bar-dx") {
                        $("#barChartDevExtreme").show();
                        renderBarChartDevExtreme(result);
                    } else if (selectedStyle === "bar-js") {
                        $("#barChartChartJS").show();
                        renderBarChartChartJS(result);
                    } else if (selectedStyle === "pie-highchart") {
                        $("#highchartPie").show();
                        renderHighchartPie(result);
                    } else if (selectedStyle === "bar-highchart") {
                        $("#highchartBar").show();
                        renderHighchartBar(result);
                    }

                $("#loadingSpinner").hide();
            },

            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });
        function renderStatusPieChart(result) {
        const labels = result.map(x => x.statusName);
        const dataValues = result.map(x => parseInt(x.total));

        const total = dataValues.reduce((acc, val) => acc + val, 0);

        const dataWithPercent = result.map(x => {
            const count = parseInt(x.total);
            const percent = total > 0 ? ((count / total) * 100).toFixed(1) : 0;
            return `${x.statusName} (${count}, ${percent}%)`;
        });

        if (window.statusChart) {
            window.statusChart.destroy();
        }

        const ctx = document.getElementById('statusPieChart').getContext('2d');
        window.statusChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: dataWithPercent,
                datasets: [{
                    data: dataValues,
                    backgroundColor: [
                        '#4caf50', '#2196f3', '#ff9800', '#f44336',
                        '#9c27b0', '#3f51b5', '#00bcd4', '#8bc34a', '#ff5722'
                    ],
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                const count = context.raw;
                                const percent = total > 0 ? ((count / total) * 100).toFixed(1) : 0;
                                return `${context.label}: ${count} (${percent}%)`;
                            }
                        }
                    },
                    legend: {
                        position: 'bottom'
                    },
                    title: {
                        display: true,
                        text: 'Booking Summary by Status'
                    }
                }
            }
        });
    }

  function renderBarChartDevExtreme(data) {
    const chartData = data.map(x => ({
        status: x.statusName,           // Trục X: tên trạng thái
        total: parseInt(x.total)        // Trục Y: tổng số lượng
    }));

    $("#barChartDevExtreme").dxChart({
        dataSource: chartData,
        commonSeriesSettings: {
            argumentField: "status",    // Dữ liệu trục X (hàng)
            type: "bar"
        },
        series: [{
            valueField: "total",        // Dữ liệu trục Y (giá trị cột)
            name: "Total"               // Tên series hiển thị trong legend
        }],
        legend: {
            visible: true,              // ✅ Hiển thị legend
            position: "bottom"          // Vị trí dưới biểu đồ
        },
        title: "Booking Summary by Status",
        tooltip: {
            enabled: true,
            customizeTooltip(arg) {
                return {
                    text: `${arg.argumentText}: ${arg.valueText}`
                };
            }
        },
        valueAxis: {
            title: {
                text: "Total Bookings"   // ✅ Tiêu đề trục Y
            },
            label: {
                format: {
                    type: "fixedPoint",
                    precision: 0
                }
            }
        },
        argumentAxis: {
            title: {
                text: "Status"           // ✅ Tiêu đề trục X
            },
            label: {
                overlappingBehavior: "rotate"
            }
        }
    });
}

function renderBarChartChartJS(data) {
    const labels = data.map(x => x.statusName);        // Trục X: trạng thái
    const values = data.map(x => parseInt(x.total));   // Trục Y: số lượng

    if (window.barChartJS) window.barChartJS.destroy();

    const ctx = document.getElementById("barChartChartJS").getContext("2d");
    window.barChartJS = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: "Total",                 // ✅ Tên hiển thị trong legend
                data: values,
                backgroundColor: '#42a5f5'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: true,             // ✅ Hiển thị legend
                    position: "bottom"
                },
                title: {
                    display: true,
                    text: 'Booking Summary by Status'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Total Bookings' // ✅ Tiêu đề trục Y
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Status'         // ✅ Tiêu đề trục X
                    }
                }
            }
        }
    });
}

    function renderStatusPieChartDevExtreme(data) {
           const total = data.reduce((sum, x) => sum + parseInt(x.total), 0);

           const pieDataSource = data.map(x => {
               const count = parseInt(x.total);
               const percent = total > 0 ? ((count / total) * 100).toFixed(1) : 0;
               return {
                   status: x.statusName,
                   total: count,
                   percentText: `${percent}%`
               };
           });

           $("#pie").dxPieChart({
               palette: "bright",
               dataSource: pieDataSource,
               title: "Booking Summary by Status",
               legend: {
                   orientation: "horizontal",
                   itemTextPosition: "right",
                   horizontalAlignment: "center",
                   verticalAlignment: "bottom",
                   columnCount: 3
               },
               export: {
                   enabled: true
               },
               series: [{
                   argumentField: "status",
                   valueField: "total",
                   label: {
                       visible: true,
                       font: {
                           size: 14
                       },
                       connector: {
                           visible: true,
                           width: 0.5
                       },
                       position: "columns",
                       customizeText(arg) {
                           return `${arg.argumentText}: ${arg.valueText} (${arg.percentText})`;
                       }
                   }
               }]
           });
       }


       // Hàm hiển thị biểu đồ tròn (Pie Chart) bằng Highcharts
        function renderHighchartPie(data) {
        // Tính tổng tất cả giá trị trong dữ liệu
        const total = data.reduce((sum, x) => sum + parseInt(x.total), 0);

        // Chuyển đổi dữ liệu thành định dạng mà Highcharts cần
        const chartData = data.map(x => {
            const y = parseInt(x.total);
            const percent = total > 0 ? ((y / total) * 100).toFixed(1) : 0;
            return {
                name: `${x.statusName} (${percent}%)`,
                y: y
            };
        });

        Highcharts.chart('highchartPie', {
            chart: {
                type: 'pie'
            },
            title: {
                text: 'Booking Summary by Status'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.y}</b>'
            },
            accessibility: {
                point: {
                    valueSuffix: '%'
                }
            },
            legend: {
                enabled: true, // 🔰 bật legend
                align: 'center',
                verticalAlign: 'bottom',
                layout: 'horizontal'
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '{point.name}: {point.y}'
                    },
                    showInLegend: true // 🔰 hiển thị dữ liệu trong legend
                }
            },
            series: [{
                name: 'Total',
                colorByPoint: true,
                data: chartData
            }]
        });
    }



    function renderHighchartBar(data) {
        const categories = data.map(x => x.statusName);
        const values = data.map(x => parseInt(x.total));

        Highcharts.chart('highchartBar', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'Booking Summary by Status'
            },
            xAxis: {
                categories: categories,
                title: {
                    text: 'Status'
                }
            },
            yAxis: {
                min: 0,
                title: {
                    text: 'Total'
                }
            },
            tooltip: {
                pointFormat: 'Total: <b>{point.y}</b>'
            },
            series: [{
                name: 'Bookings',
                data: values,
                color: '#7cb5ec'
            }]
        });
    }
</script>