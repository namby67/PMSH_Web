     $(document).off("click", "#btnPrint").on("click", "#btnPrint", function () {
        const sortFieldIndex = parseInt($("#sortOrder").val());
        const isDescending = $("#descending").is(":checked");
        const isAscending = $("#ascending").is(":checked");
        const sortDirection = isDescending ? "desc" : (isAscending ? "asc" : null);

        const masterllio = $("#masterllio").is(":checked");

        const statusValues = $("input[name='includeOptions']:checked")
            .map(function () {
                const val = $(this).val();         // ví dụ: "1,101"
                const parts = val.split(',');      // ["1", "101"]
                if (masterllio) {
                    return parts.find(p => p.length === 3); // lấy mã 3 chữ số
                } else {
                    return parts.find(p => p.length === 1); // lấy mã 1 chữ số
                }
            })
            .get()
            .join(',');

        $("#loadingSpinner").show();

        $.ajax({
            url: '/Report/SalesinChargeActivityData',
            type: 'GET',
            data: {
                fromDate: $("#fromDate").val(),
                toDate: $("#toDate").val(),
                type: statusValues,
                currency: $("#viewBy").val()
            },
            traditional: true,
            crossDomain: false,
            headers: {
                "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val()
            },
            success: function (result) {
                // 1. Lọc theo roomNight (>=)
                const roomNightFilter = parseInt($("#roomNight").val());
                const filteredResult = isNaN(roomNightFilter)
                    ? result
                    : result.filter(item => (item.roomNight || 0) >= roomNightFilter);

                // 2. Nhóm lại dữ liệu
                const processedData = preparSalesinChargeActivityData(filteredResult);

                // 3. Sắp xếp dữ liệu
                const sortFieldMap = {
                    2: "guestName",        // Account Name
                    3: "totalTurnover",    // Total Turnover
                    4: "roomSales",        // Room Sales
                    8: "roomNight",        // Room Night
                    9: "bedNightAll"       // Bed Night
                };
                const sortField = sortFieldMap[sortFieldIndex];

                if (sortField && sortDirection) {
                    processedData.sort((a, b) => {
                        // Đảm bảo giữ nguyên dòng tiêu đề và dòng tổng
                        if (a.isTitle || a.isTotal) return -1;
                        if (b.isTitle || b.isTotal) return 1;

                        const aVal = a[sortField] ?? 0;
                        const bVal = b[sortField] ?? 0;

                        if (typeof aVal === "string") {
                            return sortDirection === "asc"
                                ? aVal.localeCompare(bVal)
                                : bVal.localeCompare(aVal);
                        } else {
                            return sortDirection === "asc"
                                ? aVal - bVal
                                : bVal - aVal;
                        }
                    });
                }

                initializProductActivityGrid(processedData);
                $("#loadingSpinner").hide();
            },
            error: function () {
                alert("Không thể tải báo cáo.");
                $("#loadingSpinner").hide();
            }
        });
    });

            function preparSalesinChargeActivityData(data) {
        const groupedData = {};

        // Nhóm dữ liệu theo saleInCharge
        data.forEach(item => {
            const key = item.saleInCharge;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([saleInCharge, records]) => {
            // Thêm dòng tiêu đề cho mỗi saleInCharge
            const titleRow = {
                guestNo: `S.In Charge: ${saleInCharge}`,
                isTitle: true,
                cssClass: "custom",
            };
            finalData.push(titleRow);

            // Thêm các record
