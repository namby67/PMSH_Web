            //     bedNightAC: sum(records, 'bedNightAC'),
            //     bedNightAll: sum(records, 'bedNightAll'),
            //     roomNight: sum(records, 'roomNight'),
            //     total: sum(records, 'total'),
            //     isTotal: true
            // };

            // finalData.push(totalRow);
        });

        return finalData;
    }


     function sum(arr, field) {
        return arr.reduce((total, item) => total + (item[field] || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }
