          function prepareArrivalDetailGroupbyHoldersData(data) {
        const groupedData = {};
        const finalData = [];

        // Group theo confirmationNo
        data.forEach(item => {
            const key = item.confirmationNo ;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        // Sắp xếp các nhóm theo arrivalDate của bản ghi đầu tiên
        const sortedGroups = Object.entries(groupedData).sort((a, b) => {
            const dateA = new Date(a[1][0].arrivalDate);
            const dateB = new Date(b[1][0].arrivalDate);
            return dateA - dateB;
        });

        // Duyệt từng nhóm
        sortedGroups.forEach(([confirmationNo, records]) => {
            // Dòng tiêu đề nhóm
            finalData.push({
                roomNo: "Conf.No",
                name: confirmationNo,
                isTitle: true,
                cssClass: "custom"
            });

            // Thêm chi tiết
            finalData.push(...records);
        });

        return finalData;
    }

