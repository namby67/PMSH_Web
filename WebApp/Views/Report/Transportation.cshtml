       function prepareTransportationDataGroup(data) {

        const groupedData = {};

        const typeOrder = {
        "PickUp": 1,
        "DropOff": 2,
        "Both": 3
    };

    // 👉 Sắp xếp theo: typeOrder → transportName → pickupTime
    data.sort((a, b) => {
        const orderA = typeOrder[a.type] || 99;
        const orderB = typeOrder[b.type] || 99;

        if (orderA !== orderB) return orderA - orderB;

        const transportCompare = (a.transportName || '').localeCompare(b.transportName || '');
        if (transportCompare !== 0) return transportCompare;

        const timeA = new Date(a.pickupTime || a.dateTime || 0);
        const timeB = new Date(b.pickupTime || b.dateTime || 0);
        return timeA - timeB;
    });

        // 👉 Nhóm theo Type + TransportName
        data.forEach(item => {
            const key = `${item.type}||${item.transportName}`;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        // 👉 Lặp lại theo đúng thứ tự đã sort
        Object.entries(groupedData).forEach(([key, records]) => {
            const [type, transportName] = key.split("||");
              // Xác định nhãn cho từng loại
    const dateTimeLabel =
        type === "PickUp"
            ? "Pick Up Date/Time"
            : type === "DropOff"
                ? "Drop off Date/Time"
                : "Transport Date/Time";

    const transportDateLabel =
        type === "PickUp"
            ? "Arr.Date"
            : type === "DropOff"
                ? "Dep.Date"
                : "Date";
            const titleRow = {
                guestName: `Transport Type: ${type} - ${transportName}`,
                dateTime: dateTimeLabel,
                transportDate: transportDateLabel,
                isTitle: true,
                cssClass: "custom"
            };

            finalData.push(titleRow);
            finalData.push(...records);
        });

        return finalData;
    }


