            success: function (result) {
                // $("#reportViewerContainer").html(result);
                // $("#loadingSpinner").hide();
                     console.log(result);
                    const processedData =   prepareTransportationDataGroup(result);
                initializTransportationGrid(processedData);
                    $("#loadingSpinner").hide();
