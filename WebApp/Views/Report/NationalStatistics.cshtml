       function prepareNationalStatistics(data) {
        const groupedData = {};

        // Gộp dữ liệu theo MonthArrival và YearArrival
        data.forEach(item => {
            const key = `${item.monthArrival}_${item.yearArrival}`;
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

        const finalData = [];

        Object.entries(groupedData).forEach(([key, records]) => {
            const [month, year] = key.split("_");

            // Thêm dòng tiêu đề cho từng nhóm
            finalData.push({
                national: `Stayover for Month: ${month}/${year}`,
                 isTitle: true ,
    cssClass: "custom"
            });

            // Thêm các dòng chi tiết
            finalData.push(...records);

            // Thêm dòng tổng
            const totalRow = {
                national: "TOTAL",
                monthArrival: month,
                yearArrival: year,
                cssClass: "custom",
            };

            for (let i = 1; i <= 31; i++) {
                const zoneKey = `zone${i}`;
                totalRow[zoneKey] = sum(records, zoneKey);
            }
                totalRow.sum1 = sum(records, "sum1");

    // 👉 Trung bình percentage
           totalRow.percentage = sum(records, "percentage");
            totalRow.isTotal = true;
            finalData.push(totalRow);
        });

        return finalData;
    }


    // Helper functions
    function sum(arr, field) {
        return arr.reduce((total, item) => total + Number(item[field] || 0), 0);
    }

    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }

      function initializeRoomOccupancyGrid(data) {
        const columnWidth = 180;

        const numericZoneColumns = Array.from({ length: 31 }, (_, i) => `zone${i + 1}`);
        const numericSummaryColumns = [...numericZoneColumns, "sum1"];

        $("#gridContainer").dxDataGrid({
           dataSource: data,        height: 500,
            allowColumnResizing: true,
            columns: [
                { dataField: "national", caption: "National", width: columnWidth },
                ...numericZoneColumns.map(zone => ({
                    dataField: zone,
                    caption: zone.replace("zone", ""),
                    width: columnWidth - 100,
                    dataType: "number",
                    format: "#,##0"
                })),
                { dataField: "sum1", caption: "Sum", width: columnWidth - 100, dataType: "number", format: "#,##0" },
                { dataField: "percentage", caption: "%", width: columnWidth - 100, dataType: "number", format: "#,##0" }
            ],
            summary: {
                totalItems: [
                    {
                        name: "labelSummary",
                        showInColumn: "national",
                        summaryType: "custom",
                        displayFormat: "Total"
                    },
                    ...numericSummaryColumns.map(field => ({
                        name: `${field}Summary`,
                        showInColumn: field,
                        summaryType: "custom",
                        displayFormat: "{0}",
                        valueFormat: "#,##0"
                    }))
                ],
                calculateCustomSummary: function (e) {
                    const isCustomRow = row => row?.cssClass === "custom" || row?.isTotal === true;

                    if (e.summaryProcess === "start") {
                        e.totalValue = 0;
                    } else if (e.summaryProcess === "calculate") {
                        const row = e.value;
                        if (!isCustomRow(row)) return;

                        const field = e.name.replace("Summary", "");
                        const value = parseFloat(row[field]) || 0;
                        e.totalValue += value;
                    }
                }
            },
            paging: { pageSize: 25 },
            scrolling: {
                useNative: true,
                showScrollbar: "always"
            },
            pager: {
                visible: true,
                allowedPageSizes: [25, 50, 'all'],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true
            },
            filterRow: {
                visible: true,
                applyFilter: "auto"
            },
            headerFilter: {
                visible: true
            },
            selection: {
                mode: "multiple",
                showCheckBoxesMode: "none"
            },
            showBorders: true,
            onRowPrepared: function (e) {
                if (e.rowType === "data" && e.data?.cssClass) {
                    e.rowElement.addClass(e.data.cssClass);
                }
            }
        });
    }





