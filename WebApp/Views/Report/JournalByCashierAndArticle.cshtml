       function prepareArticleByRoomsData(data) {
        const groupedData = {};
        const finalData = [];

        // Gom nhóm theo transactionCode
        data.forEach(item => {
            const key = item.transactionCode || "";
            if (!groupedData[key]) groupedData[key] = [];
            groupedData[key].push(item);
        });

               Object.entries(groupedData).forEach(([transactionCode, records]) => {
            const first = records[0];

            // 👉 Dòng tiêu đề cho nhóm
            finalData.push({
                roomNo: `Transaction: ${transactionCode}`,
                accountName: ` - ${first.trnsDescription}`,
                isTitle: true,
                cssClass: "custom"
            });

            // 👉 Dữ liệu chi tiết
            finalData.push(...records);

            // 👉 Dòng tổng cuối nhóm
            const groupTotal = {
                currencyMaster: "Transaction Total",
                 debitAmount: sum(records, 'debitAmount'),
                creditAmount: sum(records, 'creditAmount'),
                isTotal: true,
                cssClass: "custom"
            };

            finalData.push(groupTotal);
        });


        // 👉 Tổng tất cả creditAmount và debitAmount
          const grandTotal = {
        creditAmount: sum(finalData.filter(x => x.isTotal), 'creditAmount'),
        debitAmount: sum(finalData.filter(x => x.isTotal), 'debitAmount')
    };


        return { data: finalData, grandTotal };
    }

    function sum(arr, field) {
        return arr.reduce((total, item) => {
            const value = parseFloat(item[field]);
            return total + (isNaN(value) ? 0 : value);
        }, 0);
    }


    function average(arr, field) {
        const valid = arr.filter(x => x[field] != null);
        if (valid.length === 0) return 0;
        return valid.reduce((sum, x) => sum + x[field], 0) / valid.length;
    }


