        flex-direction: column;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    /* ===== HEADER ===== */
    .login-header {
        background: #ECEBFF url('data:image/svg+xml;base64,...') no-repeat 100% 70%;
        padding: 28px 20px;
        text-align: center;
    }

    .login-logo {
        max-width: 180px;
        width: 100%;
        height: auto;
   
    }

    .login-title {
        font-size: 20px;
        font-weight: 700;
    }

    .login-subtitle {
        font-size: 16px;
        color: #555;
        margin-top: 4px;
    }

    /* ===== BODY ===== */
    .login-body {
        padding: 24px;
    }

        .login-body h3 {
            margin: 0 0 20px;
            font-size: 22px;
        }

    .form-group {
        margin-bottom: 16px;
    }

        .form-group label {
            font-size: 15px;
            font-weight: 600;
            display: block;
            margin-bottom: 6px;
        }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #dcdcdc;
        font-size: 14px;
        outline: none;
    }

        .form-control:focus {
            border-color: #00509f;
        }

    .btn-login {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background: #4ba3c7;
        color: #fff;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
    }

        .btn-login:hover {
            background: #3b8fb1;
        }


    
</style>
<div class="login-wrapper">
    <div class="login-card">

        <!-- HEADER -->
        <div class="login-header">
            <img src="/images/logo.png" alt="Logo" class="login-logo">

            <div class="login-title">
                PROPERTY MANAGEMENT SYSTEM FOR HOTEL AND RESORT
            </div>
            <div class="login-subtitle">
                Our profession, value in your success
            </div>
        </div>

        <!-- BODY -->
        <div class="login-body">

            <div class="form-group">
                <label>Login Name</label>
                <input type="text" class="form-control" placeholder="Enter username" id="txtLoginName">
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Enter password" id="txtPassword">
            </div>

            <button class="btn-login" onclick="login()">Login</button>
        </div>

    </div>
</div>


<script>
    function login() {
        var formData = new FormData();
        formData.append('LoginName', $('#txtLoginName').val());
        formData.append('Password', $('#txtPassword').val());

        $.ajax({
            url: '/User/Login',
            type: 'POST',
            processData: false,
            contentType: false,
            // headers: { "X-CSRF-TOKEN-HEADERNAME": jQuery("input[name='__RequestVerificationToken']").val() },
            data: formData,
            success: function (data) {
                $('#alert').empty();
                if (data.code == -1) {
                    $('#alert').append(`<div class="alert alert-danger" role="alert">
                       ${data.msg}
                    </div>`)
                    $('#txtLoginName').val('');
                    $('#txtPassword').val('');
                } 
                else{
                    localStorage.removeItem("PermissionNames");

                    // Gán dữ liệu mới vào localStorage (dưới dạng chuỗi JSON)
                    localStorage.setItem("PermissionNames", JSON.stringify(data.data));
                    localStorage.setItem("crashierLogin", "NotYet");

                        localStorage.removeItem("Loginname");

                    // Gán dữ liệu mới vào localStorage (dưới dạng chuỗi JSON)
                    localStorage.setItem("Loginname", JSON.stringify(data.namelogin));

                    localStorage.setItem("userID", JSON.stringify(data.userID));
                    console.log(JSON.stringify(data.businessDate));
                    localStorage.setItem("businessDate",JSON.stringify(data.businessDate));
                    window.location.href = "/Home/Index";
                }

            },
            error: function (xhr, statusText, err) {

            }
        });

    }
    $(document).ready(function () {

        $('#txtLoginName, #txtPassword').on('keypress', function (e) {
            if (e.which === 13) { // phím Enter
                login();
            }
        });
    });
</script>